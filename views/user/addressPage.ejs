<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Account - Shipping Address | GEARGRID</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>
<body class="bg-black text-white">
    <!-- Header -->
    <%- include('../partials/header') %>

    <!-- Breadcrumb Section -->
    <div class="bg-gray-100 py-8 mt-20">
        <div class="max-w-7xl mx-auto px-6">
            <h1 class="text-3xl font-bold text-black mb-2">My Account</h1>
            <div class="flex items-center text-sm text-gray-600">
                <a href="/" class="hover:text-black">GearGrid</a>
                <i class="fas fa-chevron-right mx-2 text-xs"></i>
                <span class="text-black">My Account</span>
            </div>
        </div>
    </div>

    <!-- Main Content -->
   <div class="max-w-7xl mx-auto px-6 py-12">
    <div class="flex gap-8">
        <!-- Sidebar -->
        <%- include('../partials/sidebar', { currentPage: 'address' }) %>

            <!-- Address Content -->
            <div class="flex-1">
                <div class="flex items-center justify-between mb-6">
                    <div>
                        <h2 class="text-2xl font-bold">Shipping Address</h2>
                        <p class="text-sm text-gray-400 mt-1">
                            <% if (typeof totalAddresses !== 'undefined' && totalAddresses > 0) { %>
                                <%= totalAddresses %> <%= totalAddresses === 1 ? 'address' : 'addresses' %> saved
                            <% } else { %>
                                No addresses saved yet
                            <% } %>
                        </p>
                    </div>
                    <button onclick="openAddAddressModal()" class="px-6 py-2 bg-white text-black rounded-lg hover:bg-gray-200 transition font-medium flex items-center gap-2">
                        <i class="fas fa-plus"></i>
                        <span>Add New Address</span>
                    </button>
                </div>

                <!-- Address Cards -->
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <% if (addresses && addresses.length > 0) { %>
                        <% addresses.forEach(address => { %>
                            <div class="bg-gray-900 rounded-lg p-6 border <%= address.isDefault ? 'border-cyan-400' : 'border-gray-800' %>">
                                <div class="flex items-center justify-between mb-4">
                                    <% if (address.addressType) { %>
                                        <div class="inline-block px-3 py-1 bg-cyan-400 text-black text-xs font-semibold rounded-full">
                                            <%= address.addressType %>
                                        </div>
                                    <% } %>
                                    <% if (address.isDefault) { %>
                                        <div class="inline-block px-3 py-1 bg-green-500 text-white text-xs font-semibold rounded-full">
                                            <i class="fas fa-check-circle mr-1"></i>
                                            Default
                                        </div>
                                    <% } %>
                                </div>
                                
                                <div class="space-y-3 text-gray-300">
                                    <% if (address.name) { %>
                                        <div>
                                            <p class="text-xs text-gray-500 mb-1">Name</p>
                                            <p class="text-white"><%= address.name %></p>
                                        </div>
                                    <% } %>

                                    <div>
                                        <p class="text-xs text-gray-500 mb-1">Street Address</p>
                                        <p class="text-white"><%= address.streetAddress %></p>
                                    </div>

                                    <div class="grid grid-cols-2 gap-4">
                                        <div>
                                            <p class="text-xs text-gray-500 mb-1">City</p>
                                            <p class="text-white"><%= address.city %></p>
                                        </div>
                                        <div>
                                            <p class="text-xs text-gray-500 mb-1">State</p>
                                            <p class="text-white"><%= address.state %></p>
                                        </div>
                                    </div>

                                    <div>
                                        <p class="text-xs text-gray-500 mb-1">Pin Code</p>
                                        <p class="text-white"><%= address.pinCode %></p>
                                    </div>

                                    <div>
                                        <p class="text-xs text-gray-500 mb-1">Phone</p>
                                        <p class="text-white"><%= address.phone %></p>
                                    </div>

                                    <% if (address.altPhone) { %>
                                        <div>
                                            <p class="text-xs text-gray-500 mb-1">Alternate Phone</p>
                                            <p class="text-white"><%= address.altPhone %></p>
                                        </div>
                                    <% } %>
                                </div>

                                <div class="flex flex-col gap-3 mt-6 pt-6 border-t border-gray-800">
                                    <% if (!address.isDefault) { %>
                                        <button onclick="setDefaultAddress('<%= address._id %>')" 
                                                class="w-full px-4 py-2 bg-cyan-500 text-white rounded-lg hover:bg-cyan-600 transition flex items-center justify-center gap-2">
                                            <i class="fas fa-star"></i>
                                            Set as Default
                                        </button>
                                    <% } %>
                                    <div class="flex gap-3">
                                        <button onclick="editAddress('<%= address._id %>')" class="flex-1 px-4 py-2 bg-gray-800 text-white rounded-lg hover:bg-gray-700 transition">
                                            Edit Address
                                        </button>
                                        <button onclick="deleteAddress('<%= address._id %>')" class="flex-1 px-4 py-2 bg-gray-800 text-white rounded-lg hover:bg-red-900 transition">
                                            Delete Address
                                        </button>
                                    </div>
                                </div>
                            </div>
                        <% }); %>
                    <% } else { %>
                        <div class="col-span-2 text-center py-12">
                            <i class="fas fa-map-marker-alt text-6xl text-gray-700 mb-4"></i>
                            <p class="text-gray-400 mb-4">No addresses added yet</p>
                            <button onclick="openAddAddressModal()" class="px-6 py-3 bg-white text-black rounded-lg hover:bg-gray-200 transition font-medium">
                                Add Your First Address
                            </button>
                        </div>
                    <% } %>
                </div>

                <!-- Improved Pagination -->
                <% if (typeof totalPages !== 'undefined' && totalPages > 1) { %>
                    <div class="mt-8 flex items-center justify-between border-t border-gray-800 pt-6">
                        <!-- Mobile Pagination -->
                        <div class="flex-1 flex justify-between sm:hidden">
                            <% if (hasPrevPage) { %>
                                <a href="?page=<%= currentPage - 1 %>" 
                                   class="relative inline-flex items-center px-4 py-2 border border-gray-700 text-sm font-medium rounded-md text-white bg-gray-800 hover:bg-gray-700">
                                    <i class="fas fa-chevron-left mr-2"></i>
                                    Previous
                                </a>
                            <% } else { %>
                                <span class="relative inline-flex items-center px-4 py-2 border border-gray-700 text-sm font-medium rounded-md text-gray-500 bg-gray-900 cursor-not-allowed">
                                    <i class="fas fa-chevron-left mr-2"></i>
                                    Previous
                                </span>
                            <% } %>
                            
                            <% if (hasNextPage) { %>
                                <a href="?page=<%= currentPage + 1 %>" 
                                   class="ml-3 relative inline-flex items-center px-4 py-2 border border-gray-700 text-sm font-medium rounded-md text-white bg-gray-800 hover:bg-gray-700">
                                    Next
                                    <i class="fas fa-chevron-right ml-2"></i>
                                </a>
                            <% } else { %>
                                <span class="ml-3 relative inline-flex items-center px-4 py-2 border border-gray-700 text-sm font-medium rounded-md text-gray-500 bg-gray-900 cursor-not-allowed">
                                    Next
                                    <i class="fas fa-chevron-right ml-2"></i>
                                </span>
                            <% } %>
                        </div>
                        
                        <!-- Desktop Pagination -->
                        <div class="hidden sm:flex-1 sm:flex sm:items-center sm:justify-between">
                            <div>
                                <p class="text-sm text-gray-400">
                                    Showing 
                                    <span class="font-medium text-white"><%= ((currentPage - 1) * 2) + 1 %></span>
                                    to 
                                    <span class="font-medium text-white"><%= Math.min(currentPage * 2, totalAddresses) %></span>
                                    of 
                                    <span class="font-medium text-white"><%= totalAddresses %></span>
                                    addresses
                                </p>
                            </div>
                            <div>
                                <nav class="relative z-0 inline-flex rounded-md shadow-sm -space-x-px" aria-label="Pagination">
                                    <!-- Previous Button -->
                                    <% if (hasPrevPage) { %>
                                        <a href="?page=<%= currentPage - 1 %>" 
                                           class="relative inline-flex items-center px-3 py-2 rounded-l-md border border-gray-700 bg-gray-800 text-sm font-medium text-white hover:bg-gray-700">
                                            <i class="fas fa-chevron-left"></i>
                                        </a>
                                    <% } else { %>
                                        <span class="relative inline-flex items-center px-3 py-2 rounded-l-md border border-gray-700 bg-gray-900 text-sm font-medium text-gray-500 cursor-not-allowed">
                                            <i class="fas fa-chevron-left"></i>
                                        </span>
                                    <% } %>
                                    
                                    <!-- Page Numbers -->
                                    <% 
                                        let startPage = Math.max(1, currentPage - 2);
                                        let endPage = Math.min(totalPages, currentPage + 2);
                                        
                                        // Adjust if we're near the start or end
                                        if (currentPage <= 3) {
                                            endPage = Math.min(5, totalPages);
                                        }
                                        if (currentPage >= totalPages - 2) {
                                            startPage = Math.max(1, totalPages - 4);
                                        }
                                    %>
                                    
                                    <!-- First page if not in range -->
                                    <% if (startPage > 1) { %>
                                        <a href="?page=1" 
                                           class="relative inline-flex items-center px-4 py-2 border border-gray-700 bg-gray-800 text-sm font-medium text-white hover:bg-gray-700">
                                            1
                                        </a>
                                        <% if (startPage > 2) { %>
                                            <span class="relative inline-flex items-center px-4 py-2 border border-gray-700 bg-gray-900 text-sm font-medium text-gray-400">
                                                ...
                                            </span>
                                        <% } %>
                                    <% } %>
                                    
                                    <!-- Page number links -->
                                    <% for (let i = startPage; i <= endPage; i++) { %>
                                        <a href="?page=<%= i %>" 
                                           class="relative inline-flex items-center px-4 py-2 border text-sm font-medium 
                                                  <%= i === currentPage 
                                                      ? 'z-10 bg-cyan-500 border-cyan-500 text-white' 
                                                      : 'border-gray-700 bg-gray-800 text-white hover:bg-gray-700' %>">
                                            <%= i %>
                                        </a>
                                    <% } %>
                                    
                                    <!-- Last page if not in range -->
                                    <% if (endPage < totalPages) { %>
                                        <% if (endPage < totalPages - 1) { %>
                                            <span class="relative inline-flex items-center px-4 py-2 border border-gray-700 bg-gray-900 text-sm font-medium text-gray-400">
                                                ...
                                            </span>
                                        <% } %>
                                        <a href="?page=<%= totalPages %>" 
                                           class="relative inline-flex items-center px-4 py-2 border border-gray-700 bg-gray-800 text-sm font-medium text-white hover:bg-gray-700">
                                            <%= totalPages %>
                                        </a>
                                    <% } %>
                                    
                                    <!-- Next Button -->
                                    <% if (hasNextPage) { %>
                                        <a href="?page=<%= currentPage + 1 %>" 
                                           class="relative inline-flex items-center px-3 py-2 rounded-r-md border border-gray-700 bg-gray-800 text-sm font-medium text-white hover:bg-gray-700">
                                            <i class="fas fa-chevron-right"></i>
                                        </a>
                                    <% } else { %>
                                        <span class="relative inline-flex items-center px-3 py-2 rounded-r-md border border-gray-700 bg-gray-900 text-sm font-medium text-gray-500 cursor-not-allowed">
                                            <i class="fas fa-chevron-right"></i>
                                        </span>
                                    <% } %>
                                </nav>
                            </div>
                        </div>
                    </div>
                <% } %>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <%- include('../partials/footer') %>

    <!-- Add Address Modal -->
    <div id="addAddressModal" class="hidden fixed inset-0 bg-black bg-opacity-50 z-50 flex items-center justify-center p-4">
        <div class="bg-gray-900 rounded-lg max-w-2xl w-full max-h-[90vh] overflow-y-auto border border-gray-800">
            <div class="p-6">
                <div class="flex items-center justify-between mb-6">
                    <h3 class="text-2xl font-bold">Add New Address</h3>
                    <button onclick="closeAddAddressModal()" class="text-gray-400 hover:text-white">
                        <i class="fas fa-times text-2xl"></i>
                    </button>
                </div>

                <form id="addAddressForm" class="space-y-4">
                    <div>
                        <label class="block text-sm font-medium mb-2">Address Type *</label>
                        <select name="addressType" required class="w-full px-4 py-3 bg-gray-800 border border-gray-700 rounded-lg focus:outline-none focus:border-cyan-400 text-white">
                            <option value="">Select Type</option>
                            <option value="Home">Home</option>
                            <option value="Work">Work</option>
                            <option value="Other">Other</option>
                        </select>
                    </div>

                    <div>
                        <label class="block text-sm font-medium mb-2">Full Name *</label>
                        <input type="text" name="name" required 
                            class="w-full px-4 py-3 bg-gray-800 border border-gray-700 rounded-lg focus:outline-none focus:border-cyan-400 text-white"
                            placeholder="Enter full name">
                    </div>

                    <div>
                        <label class="block text-sm font-medium mb-2">Street Address *</label>
                        <textarea name="streetAddress" required rows="2"
                            class="w-full px-4 py-3 bg-gray-800 border border-gray-700 rounded-lg focus:outline-none focus:border-cyan-400 text-white"
                            placeholder="House no, Building name, Street"></textarea>
                    </div>

                    <div class="grid grid-cols-2 gap-4">
                        <div>
                            <label class="block text-sm font-medium mb-2">City *</label>
                            <input type="text" name="city" required 
                                class="w-full px-4 py-3 bg-gray-800 border border-gray-700 rounded-lg focus:outline-none focus:border-cyan-400 text-white"
                                placeholder="City">
                        </div>
                        <div>
                            <label class="block text-sm font-medium mb-2">State *</label>
                            <input type="text" name="state" required 
                                class="w-full px-4 py-3 bg-gray-800 border border-gray-700 rounded-lg focus:outline-none focus:border-cyan-400 text-white"
                                placeholder="State">
                        </div>
                    </div>

                    <div>
                        <label class="block text-sm font-medium mb-2">Pin Code *</label>
                        <input type="text" name="pinCode" required pattern="\d{6}" maxlength="6"
                            class="w-full px-4 py-3 bg-gray-800 border border-gray-700 rounded-lg focus:outline-none focus:border-cyan-400 text-white"
                            placeholder="6-digit pin code">
                    </div>

                    <div class="grid grid-cols-2 gap-4">
                        <div>
                            <label class="block text-sm font-medium mb-2">Phone Number *</label>
                            <input type="text" name="phone" required pattern="\d{10}" maxlength="10"
                                class="w-full px-4 py-3 bg-gray-800 border border-gray-700 rounded-lg focus:outline-none focus:border-cyan-400 text-white"
                                placeholder="10-digit number">
                        </div>
                        <div>
                            <label class="block text-sm font-medium mb-2">Alternate Phone</label>
                            <input type="text" name="altPhone" pattern="\d{10}" maxlength="10"
                                class="w-full px-4 py-3 bg-gray-800 border border-gray-700 rounded-lg focus:outline-none focus:border-cyan-400 text-white"
                                placeholder="Optional">
                        </div>
                    </div>

                    <div class="flex gap-4 pt-4">
                        <button type="submit" 
                            class="flex-1 px-6 py-3 bg-white text-black rounded-lg hover:bg-gray-200 transition font-medium">
                            Save Address
                        </button>
                        <button type="button" onclick="closeAddAddressModal()"
                            class="flex-1 px-6 py-3 bg-gray-800 text-white rounded-lg hover:bg-gray-700 transition font-medium">
                            Cancel
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Edit Address Modal -->
    <div id="editAddressModal" class="hidden fixed inset-0 bg-black bg-opacity-50 z-50 flex items-center justify-center p-4">
        <div class="bg-gray-900 rounded-lg max-w-2xl w-full max-h-[90vh] overflow-y-auto border border-gray-800">
            <div class="p-6">
                <div class="flex items-center justify-between mb-6">
                    <h3 class="text-2xl font-bold">Edit Address</h3>
                    <button onclick="closeEditAddressModal()" class="text-gray-400 hover:text-white">
                        <i class="fas fa-times text-2xl"></i>
                    </button>
                </div>

                <form id="editAddressForm" class="space-y-4">
                    <div>
                        <label class="block text-sm font-medium mb-2">Address Type *</label>
                        <select name="addressType" required class="w-full px-4 py-3 bg-gray-800 border border-gray-700 rounded-lg focus:outline-none focus:border-cyan-400 text-white">
                            <option value="Home">Home</option>
                            <option value="Work">Work</option>
                            <option value="Other">Other</option>
                        </select>
                    </div>

                    <div>
                        <label class="block text-sm font-medium mb-2">Full Name *</label>
                        <input type="text" name="name" required 
                            class="w-full px-4 py-3 bg-gray-800 border border-gray-700 rounded-lg focus:outline-none focus:border-cyan-400 text-white">
                    </div>

                    <div>
                        <label class="block text-sm font-medium mb-2">Street Address *</label>
                        <textarea name="streetAddress" required rows="2"
                            class="w-full px-4 py-3 bg-gray-800 border border-gray-700 rounded-lg focus:outline-none focus:border-cyan-400 text-white"></textarea>
                    </div>

                    <div class="grid grid-cols-2 gap-4">
                        <div>
                            <label class="block text-sm font-medium mb-2">City *</label>
                            <input type="text" name="city" required 
                                class="w-full px-4 py-3 bg-gray-800 border border-gray-700 rounded-lg focus:outline-none focus:border-cyan-400 text-white">
                        </div>
                        <div>
                            <label class="block text-sm font-medium mb-2">State *</label>
                            <input type="text" name="state" required 
                                class="w-full px-4 py-3 bg-gray-800 border border-gray-700 rounded-lg focus:outline-none focus:border-cyan-400 text-white">
                        </div>
                    </div>

                    <div>
                        <label class="block text-sm font-medium mb-2">Pin Code *</label>
                        <input type="text" name="pinCode" required pattern="\d{6}" maxlength="6"
                            class="w-full px-4 py-3 bg-gray-800 border border-gray-700 rounded-lg focus:outline-none focus:border-cyan-400 text-white">
                    </div>

                    <div class="grid grid-cols-2 gap-4">
                        <div>
                            <label class="block text-sm font-medium mb-2">Phone Number *</label>
                            <input type="text" name="phone" required pattern="\d{10}" maxlength="10"
                                class="w-full px-4 py-3 bg-gray-800 border border-gray-700 rounded-lg focus:outline-none focus:border-cyan-400 text-white">
                        </div>
                        <div>
                            <label class="block text-sm font-medium mb-2">Alternate Phone</label>
                            <input type="text" name="altPhone" pattern="\d{10}" maxlength="10"
                                class="w-full px-4 py-3 bg-gray-800 border border-gray-700 rounded-lg focus:outline-none focus:border-cyan-400 text-white">
                        </div>
                    </div>

                    <div class="flex gap-4 pt-4">
                        <button type="submit" 
                            class="flex-1 px-6 py-3 bg-white text-black rounded-lg hover:bg-gray-200 transition font-medium">
                            Update Address
                        </button>
                        <button type="button" onclick="closeEditAddressModal()"
                            class="flex-1 px-6 py-3 bg-gray-800 text-white rounded-lg hover:bg-gray-700 transition font-medium">
                            Cancel
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

<script>
    // Open add address modal
    function openAddAddressModal() {
        document.getElementById('addAddressModal').classList.remove('hidden');
    }

    // Close add address modal
    function closeAddAddressModal() {
        document.getElementById('addAddressModal').classList.add('hidden');
        document.getElementById('addAddressForm').reset();
    }

    // Handle add address form submission
    document.getElementById('addAddressForm').addEventListener('submit', async (e) => {
        e.preventDefault();

        const formData = new FormData(e.target);
        const data = Object.fromEntries(formData);

        try {
            const response = await fetch('/address/add', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(data)
            });

            const result = await response.json();

            if (result.success) {
                await Swal.fire({
                    icon: 'success',
                    title: 'Address Added!',
                    text: result.message,
                    confirmButtonColor: '#10b981',
                    confirmButtonText: 'OK'
                });
                location.reload();
            } else {
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: result.message,
                    confirmButtonColor: '#ef4444'
                });
            }
        } catch (error) {
            console.error('Error:', error);
            Swal.fire({
                icon: 'error',
                title: 'Error',
                text: 'Failed to add address',
                confirmButtonColor: '#ef4444'
            });
        }
    });

   

    // Delete address
    async function deleteAddress(addressId) {
        const result = await Swal.fire({
            icon: 'warning',
            title: 'Delete Address?',
            text: 'Are you sure you want to delete this address?',
            showCancelButton: true,
            confirmButtonColor: '#ef4444',
            cancelButtonColor: '#6b7280',
            confirmButtonText: 'Yes, delete it',
            cancelButtonText: 'Cancel'
        });

        if (result.isConfirmed) {
            try {
                const response = await fetch(`/address/delete/${addressId}`, {
                    method: 'DELETE',
                    headers: { 'Content-Type': 'application/json' }
                });

                const data = await response.json();

                if (data.success) {
                    await Swal.fire({
                        icon: 'success',
                        title: 'Deleted!',
                        text: data.message,
                        confirmButtonColor: '#10b981'
                    });
                    location.reload();
                } else {
                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text: data.message,
                        confirmButtonColor: '#ef4444'
                    });
                }
            } catch (error) {
                console.error('Error:', error);
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: 'Failed to delete address',
                    confirmButtonColor: '#ef4444'
                });
            }
        }
    }

    // Set default address
    async function setDefaultAddress(addressId) {
        try {
            const response = await fetch(`/address/set-default/${addressId}`, {
                method: 'PATCH',
                headers: { 'Content-Type': 'application/json' }
            });

            const data = await response.json();

            if (data.success) {
                await Swal.fire({
                    icon: 'success',
                    title: 'Default Address Set!',
                    text: data.message,
                    confirmButtonColor: '#10b981',
                    timer: 2000,
                    showConfirmButton: false
                });
                location.reload();
            } else {
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: data.message,
                    confirmButtonColor: '#ef4444'
                });
            }
        } catch (error) {
            console.error('Error:', error);
            Swal.fire({
                icon: 'error',
                title: 'Error',
                text: 'Failed to set default address',
                confirmButtonColor: '#ef4444'
            });
        }
    }

    // Close modal when clicking outside
    document.getElementById('addAddressModal').addEventListener('click', (e) => {
        if (e.target.id === 'addAddressModal') {
            closeAddAddressModal();
        }
    });


    // Edit address - fetch data and open modal
async function editAddress(addressId) {
    try {
        const response = await fetch(`/address/edit/${addressId}`);
        const result = await response.json();

        if (result.success) {
            const address = result.address;
            
            // Show modal
            document.getElementById('editAddressModal').classList.remove('hidden');
            
            // Store addressId
            document.getElementById('editAddressForm').dataset.addressId = addressId;
            
            // Populate form
            const form = document.getElementById('editAddressForm');
            form.querySelector('[name="addressType"]').value = address.addressType;
            form.querySelector('[name="name"]').value = address.name;
            form.querySelector('[name="streetAddress"]').value = address.streetAddress;
            form.querySelector('[name="city"]').value = address.city;
            form.querySelector('[name="state"]').value = address.state;
            form.querySelector('[name="pinCode"]').value = address.pinCode;
            form.querySelector('[name="phone"]').value = address.phone;
            form.querySelector('[name="altPhone"]').value = address.altPhone || '';
        } else {
            Swal.fire({
                icon: 'error',
                title: 'Error',
                text: result.message,
                confirmButtonColor: '#ef4444'
            });
        }
    } catch (error) {
        console.error('Error:', error);
        Swal.fire({
            icon: 'error',
            title: 'Error',
            text: 'Failed to load address',
            confirmButtonColor: '#ef4444'
        });
    }
}

// Close edit modal
function closeEditAddressModal() {
    document.getElementById('editAddressModal').classList.add('hidden');
    document.getElementById('editAddressForm').reset();
}

// Handle edit form submission
document.getElementById('editAddressForm').addEventListener('submit', async (e) => {
    e.preventDefault();
    
    const addressId = e.target.dataset.addressId;
    const formData = new FormData(e.target);
    const data = Object.fromEntries(formData);
    
    try {
        const response = await fetch(`/address/update/${addressId}`, {
            method: 'PATCH',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(data)
        });
        
        const result = await response.json();
        
        if (result.success) {
            closeEditAddressModal();
            await Swal.fire({
                icon: 'success',
                title: 'Updated!',
                text: result.message,
                confirmButtonColor: '#10b981'
            });
            location.reload();
        } else {
            Swal.fire({
                icon: 'error',
                title: 'Error',
                text: result.message,
                confirmButtonColor: '#ef4444'
            });
        }
    } catch (error) {
        console.error('Error:', error);
        Swal.fire({
            icon: 'error',
            title: 'Error',
            text: 'Failed to update address',
            confirmButtonColor: '#ef4444'
        });
    }
});

// Close modal when clicking outside
document.getElementById('editAddressModal').addEventListener('click', (e) => {
    if (e.target.id === 'editAddressModal') {
        closeEditAddressModal();
    }
});

