<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shop - GEARGRID</title>
     <style>.product-card.out-of-stock {
    opacity: 0.5;
    position: relative;
}

.product-card.out-of-stock::after {
    content: 'OUT OF STOCK';
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    background: rgba(0, 0, 0, 0.8);
    color: white;
    padding: 8px 16px;
    border-radius: 4px;
    font-weight: bold;
    font-size: 12px;
    z-index: 10;
}

.product-card.out-of-stock .add-to-cart-btn {
    opacity: 0.5;
    cursor: not-allowed;
    pointer-events: none;
}
</style>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>
<body class="bg-black text-white">
    <!-- Header -->
    <%- include('../partials/header') %>

    <!-- Breadcrumb -->
    <div class="bg-gray-800 border-b border-gray-700 mt-20">
        <div class="max-w-7xl mx-auto px-6 py-4">
            <div class="flex items-center text-sm">
                <a href="/" class="text-gray-300 hover:text-white transition">Home</a>
                <i class="fas fa-chevron-right mx-2 text-xs text-gray-500"></i>
                <% if (selectedCategory && selectedCategory !== 'all') { %>
                    <a href="/shop" class="text-gray-300 hover:text-white transition">Shop</a>
                    <i class="fas fa-chevron-right mx-2 text-xs text-gray-500"></i>
                    <span class="text-white font-medium">
                        <%= categories.find(cat => cat._id.toString() === selectedCategory)?.name || 'Category' %>
                    </span>
                <% } else { %>
                    <span class="text-white font-medium">Shop</span>
                <% } %>
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <div class="max-w-7xl mx-auto px-6 py-9">
        <!-- Filter and Sort Bar -->
        <div class="flex items-center justify-between mb-6">
            <!-- Left: Search & Filter Button -->
            <div class="flex items-center gap-3">
                <form action="/shop" method="GET" class="flex items-center gap-3">
                    <input type="hidden" name="category" value="<%= selectedCategory %>">
                    <input type="hidden" name="color" value="<%= selectedColor %>">
                    <input type="hidden" name="sort" value="<%= sortBy %>">
                    <input type="hidden" name="minPrice" value="<%= minPrice %>">
                    <input type="hidden" name="maxPrice" value="<%= maxPrice %>">
                    <div class="relative">
                        <input type="text" name="search" value="<%= search %>" 
                            placeholder="Search products..."
                            class="bg-gray-900 border border-gray-700 text-white px-4 py-2 pr-10 rounded text-sm focus:outline-none w-64">
                        <button type="submit" class="absolute right-3 top-1/2 transform -translate-y-1/2 text-gray-400 hover:text-white">
                            <i class="fas fa-search text-xs"></i>
                        </button>
                    </div>
                </form>

                <button onclick="openFilterModal()" type="button"
                    class="px-6 py-2 bg-white text-black rounded font-medium hover:bg-gray-200 transition flex items-center gap-2">
                    <i class="fas fa-filter"></i>
                    FILTERS
                    <% 
                    const filterCount = (selectedCategory ? 1 : 0) + (selectedColor ? 1 : 0) + ((minPrice > 0 || maxPrice > 0) ? 1 : 0);
                    if (filterCount > 0) { %>
                        <span class="bg-cyan-400 text-black text-xs px-2 py-0.5 rounded-full ml-1">
                            <%= filterCount %>
                        </span>
                    <% } %>
                </button>
            </div>

            <!-- Right: Sort -->
            <div class="flex items-center gap-3">
                <span class="text-xs text-gray-400 uppercase">SORT BY:</span>
                <select onchange="window.location.href=this.value"
                    class="bg-gray-900 border border-gray-700 text-white px-4 py-2 rounded text-sm focus:outline-none cursor-pointer">
                    <option value="/shop?category=<%= selectedCategory %>&color=<%= selectedColor %>&minPrice=<%= minPrice %>&maxPrice=<%= maxPrice %>&search=<%= search %>&sort=featured" 
                        <%= sortBy === 'featured' ? 'selected' : '' %>>Featured</option>
                    <option value="/shop?category=<%= selectedCategory %>&color=<%= selectedColor %>&minPrice=<%= minPrice %>&maxPrice=<%= maxPrice %>&search=<%= search %>&sort=newest" 
                        <%= sortBy === 'newest' ? 'selected' : '' %>>Newest</option>
                    <option value="/shop?category=<%= selectedCategory %>&color=<%= selectedColor %>&minPrice=<%= minPrice %>&maxPrice=<%= maxPrice %>&search=<%= search %>&sort=price-low" 
                        <%= sortBy === 'price-low' ? 'selected' : '' %>>Price: Low to High</option>
                    <option value="/shop?category=<%= selectedCategory %>&color=<%= selectedColor %>&minPrice=<%= minPrice %>&maxPrice=<%= maxPrice %>&search=<%= search %>&sort=price-high" 
                        <%= sortBy === 'price-high' ? 'selected' : '' %>>Price: High to Low</option>
                </select>
            </div>
        </div>

        <!-- Active Filters -->
        <% if (selectedCategory || selectedColor || minPrice > 0 || maxPrice > 0) { %>
        <div class="mb-6 flex items-center gap-3 flex-wrap">
            <% if (selectedCategory) { %>
                <% const selectedCat = categories.find(c => c._id.toString() === selectedCategory); %>
                <% if (selectedCat) { %>
                    <span class="px-3 py-1.5 bg-gray-800 border border-gray-700 rounded-full text-sm flex items-center gap-2">
                        <%= selectedCat.name %>
                        <a href="/shop?search=<%= search %>&sort=<%= sortBy %>&color=<%= selectedColor %>&minPrice=<%= minPrice %>&maxPrice=<%= maxPrice %>" 
                            class="hover:text-red-400 text-lg leading-none">×</a>
                    </span>
                <% } %>
            <% } %>
            
            <% if (selectedColor) { %>
                <span class="px-3 py-1.5 bg-gray-800 border border-gray-700 rounded-full text-sm flex items-center gap-2">
                    <span class="w-3 h-3 rounded-full border border-white" 
                        style="background-color: <%= selectedColor.toLowerCase() %>;"></span>
                    <%= selectedColor %>
                    <a href="/shop?search=<%= search %>&sort=<%= sortBy %>&category=<%= selectedCategory %>&minPrice=<%= minPrice %>&maxPrice=<%= maxPrice %>" 
                        class="hover:text-red-400 text-lg leading-none">×</a>
                </span>
            <% } %>

            <% if (minPrice > 0 || maxPrice > 0) { %>
                <span class="px-3 py-1.5 bg-gray-800 border border-gray-700 rounded-full text-sm flex items-center gap-2">
                    ₹<%= minPrice || 0 %> - ₹<%= maxPrice || '∞' %>
                    <a href="/shop?search=<%= search %>&sort=<%= sortBy %>&category=<%= selectedCategory %>&color=<%= selectedColor %>" 
                        class="hover:text-red-400 text-lg leading-none">×</a>
                </span>
            <% } %>

            <a href="/shop?search=<%= search %>&sort=<%= sortBy %>" 
                class="text-sm text-gray-400 hover:text-white underline">
                Clear all
            </a>
        </div>
        <% } %>

        <!-- Products Grid -->
        <% if (products.length === 0) { %>
            <div class="text-center py-20">
                <svg class="w-24 h-24 mx-auto text-gray-700 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"/>
                </svg>
                <h3 class="text-xl font-semibold text-gray-400 mb-2">No products found</h3>
                <p class="text-gray-500">Try adjusting your filters or search terms</p>
            </div>
        <% } else { %>
            <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-5">
                <% products.forEach(product => { 
                    let minPrice = Infinity;
                    let maxPrice = -Infinity;
                    let firstVariant = null;
                    
                    if (product.variants && product.variants.length > 0) {
                        product.variants.forEach(variant => {
                            if (variant.salePrice < minPrice) minPrice = variant.salePrice;
                            if (variant.salePrice > maxPrice) maxPrice = variant.salePrice;
                        });
                        firstVariant = product.variants[0];
                    }
                    
                    let imageUrl = null;
                    if (firstVariant && firstVariant.images && firstVariant.images.length > 0) {
                        imageUrl = firstVariant.images[0];
                    } else if (product.productImage && product.productImage.length > 0) {
                        imageUrl = product.productImage[0];
                    }
                %>
                            <%
                // Calculate if product has stock
                let productHasStock = false;
                let productTotalStock = 0;
                if (product.variants && product.variants.length > 0) {
                    productTotalStock = product.variants.reduce((sum, variant) => sum + variant.quantity, 0);
                    productHasStock = productTotalStock > 0;
                }
            %>
            <a href="/product/<%= product._id %>" class="block bg-gray-900 rounded-lg overflow-hidden group hover:shadow-xl transition-shadow duration-200 <%= !productHasStock ? 'out-of-stock' : '' %>">
                    <!-- Product Image -->
                        <div class="relative bg-white p-6 aspect-square flex items-center justify-center">
                            <% if (imageUrl) { %>
                                <img src="<%= imageUrl %>" alt="<%= product.productName %>" 
                                    class="max-w-full max-h-full object-contain">
                            <% } else { %>
                                <div class="w-full h-full flex items-center justify-center bg-gray-100">
                                    <svg class="w-16 h-16 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                                    </svg>
                                </div>
                            <% } %>
                            
                            <!-- Wishlist Button -->
                            <div class="absolute top-2 right-2">
                                <% 
                                const isInWishlist = wishlistProductIds && wishlistProductIds.includes(product._id.toString());
                                %>
                                <button onclick="event.preventDefault(); event.stopPropagation(); toggleWishlist('<%= product._id %>')" 
                                    class="w-8 h-8 bg-black text-white rounded-full flex items-center justify-center hover:bg-gray-800 transition"
                                    data-product-id="<%= product._id %>">
                                    <i class="<%= isInWishlist ? 'fas' : 'far' %> fa-heart text-xs <%= isInWishlist ? 'text-red-500' : '' %>"></i>
                                </button>
                            </div>
                            
                            <!-- Color Options -->
                            <% if (product.variants && product.variants.length > 0) { %>
                                <div class="absolute bottom-2 left-2 flex gap-1">
                                    <% product.variants.slice(0, 3).forEach(variant => { %>
                                        <span class="w-4 h-4 rounded-full border-2 border-white shadow" 
                                            style="background-color: <%= variant.color.toLowerCase() %>;"
                                            title="<%= variant.color %>"></span>
                                    <% }); %>
                                    <% if (product.variants.length > 3) { %>
                                        <span class="text-xs bg-black text-white px-1.5 rounded-full">+<%= product.variants.length - 3 %></span>
                                    <% } %>
                                </div>
                            <% } %>
                        </div>
                        
                      <!-- Product Info -->
<div class="p-4">
    <h3 class="text-sm font-medium mb-1 line-clamp-1">
        <%= product.productName %>
    </h3>
    <p class="text-xs text-gray-500 uppercase mb-2">
        <%= product.category ? product.category.name : 'Uncategorized' %>
    </p>
    
    <!-- Stock Status -->
    <% if (!productHasStock) { %>
        <p class="text-xs text-red-400 mb-1">
            <i class="fas fa-times-circle"></i> Out of Stock
        </p>
    <% } %>
    
    <!-- Price -->
    <div>
        <% if (product.variants && product.variants.length > 0) { %>
            <% 
                const firstVariant = product.variants[0];
                const hasDiscount = firstVariant.discountAmount > 0;
            %>
            
            <% if (hasDiscount) { %>
                <div class="flex items-center gap-2 flex-wrap">
                    <p class="text-lg font-bold text-red-400">₹<%= firstVariant.finalPrice.toLocaleString() %></p>
                    <p class="text-xs text-gray-500 line-through">₹<%= firstVariant.regularPrice.toLocaleString() %></p>
                    <span class="text-xs px-2 py-0.5 rounded-full <%= firstVariant.appliedOffer === 'category' ? 'bg-orange-500/20 text-orange-400' : 'bg-green-500/20 text-green-400' %> font-medium">
                        <%= firstVariant.discountPercentage.toFixed(2) %>% OFF
                    </span>
                </div>
            <% } else { %>
                <p class="text-lg font-bold <%= !productHasStock ? 'text-gray-500' : '' %>">₹<%= firstVariant.finalPrice.toLocaleString() %></p>
            <% } %>
        <% } else { %>
            <p class="text-lg font-bold <%= !productHasStock ? 'text-gray-500' : '' %>">₹<%= (product.salePrice || product.regularPrice || 0).toLocaleString() %></p>
        <% } %>
    </div>
</div>
   <% }); %>
            </div>

            <!-- Pagination -->
            <% if (totalPages > 1) { %>
                <div class="mt-12 flex justify-center items-center gap-2">
                    <% if (currentPage > 1) { %>
                        <a href="/shop?page=<%= currentPage - 1 %>&category=<%= selectedCategory %>&color=<%= selectedColor %>&search=<%= search %>&sort=<%= sortBy %>" 
                            class="px-4 py-2 bg-gray-900 border border-gray-700 text-white rounded hover:bg-gray-800 transition">
                            <i class="fas fa-chevron-left"></i>
                        </a>
                    <% } %>
                    
                    <% 
                    let startPage = Math.max(1, currentPage - 2);
                    let endPage = Math.min(totalPages, currentPage + 2);
                    
                    for (let i = startPage; i <= endPage; i++) { %>
                        <a href="/shop?page=<%= i %>&category=<%= selectedCategory %>&color=<%= selectedColor %>&search=<%= search %>&sort=<%= sortBy %>"
                            class="px-4 py-2 <%= i === currentPage ? 'bg-white text-black' : 'bg-gray-900 border border-gray-700 text-white hover:bg-gray-800' %> rounded transition font-medium">
                            <%= i %>
                        </a>
                    <% } %>
                    
                    <% if (currentPage < totalPages) { %>
                        <a href="/shop?page=<%= currentPage + 1 %>&category=<%= selectedCategory %>&color=<%= selectedColor %>&search=<%= search %>&sort=<%= sortBy %>" 
                            class="px-4 py-2 bg-gray-900 border border-gray-700 text-white rounded hover:bg-gray-800 transition">
                            <i class="fas fa-chevron-right"></i>
                        </a>
                    <% } %>
                </div>
                
                <p class="text-center text-gray-400 text-sm mt-4">
                    Showing page <%= currentPage %> of <%= totalPages %> (<%= products.length %> products)
                </p>
            <% } %>
        <% } %>
    </div>

    <!-- Filter Modal -->
    <div id="filterModal" class="hidden fixed inset-0 bg-black bg-opacity-75 z-50 flex items-center justify-center p-4">
        <div class="bg-gray-900 rounded-lg max-w-md w-full max-h-[90vh] overflow-y-auto">
            <!-- Modal Header -->
            <div class="flex items-center justify-between p-6 border-b border-gray-800">
                <h2 class="text-xl font-bold">Filters</h2>
                <button onclick="closeFilterModal()" class="text-gray-400 hover:text-white">
                    <i class="fas fa-times text-xl"></i>
                </button>
            </div>

            <!-- Filter Form -->
            <form action="/shop" method="GET" class="p-6">
                <!-- Preserve search and sort -->
                <input type="hidden" name="search" value="<%= search %>">
                <input type="hidden" name="sort" value="<%= sortBy %>">

                <!-- Category Filter -->
                <div class="mb-6">
                    <h3 class="text-sm font-semibold mb-3 uppercase tracking-wide">Category</h3>
                    <div class="space-y-2">
                        <label class="flex items-center cursor-pointer hover:bg-gray-800 p-2 rounded transition">
                            <input type="radio" name="category" value="" 
                                <%= !selectedCategory ? 'checked' : '' %>
                                class="w-4 h-4 text-cyan-400 focus:ring-cyan-400">
                            <span class="ml-3 text-sm">All Categories</span>
                        </label>
                        <% categories.forEach(category => { %>
                            <label class="flex items-center cursor-pointer hover:bg-gray-800 p-2 rounded transition">
                                <input type="radio" name="category" value="<%= category._id %>" 
                                    <%= selectedCategory === category._id.toString() ? 'checked' : '' %>
                                    class="w-4 h-4 text-cyan-400 focus:ring-cyan-400">
                                <span class="ml-3 text-sm"><%= category.name %></span>
                            </label>
                        <% }); %>
                    </div>
                </div>

                <!-- Color Filter -->
                <div class="mb-6">
                    <h3 class="text-sm font-semibold mb-3 uppercase tracking-wide">Color</h3>
                    <div class="space-y-2">
                        <label class="flex items-center cursor-pointer hover:bg-gray-800 p-2 rounded transition">
                            <input type="radio" name="color" value="" 
                                <%= !selectedColor ? 'checked' : '' %>
                                class="w-4 h-4 text-cyan-400 focus:ring-cyan-400">
                            <span class="ml-3 text-sm">All Colors</span>
                        </label>
                        <% availableColors.forEach(color => { %>
                            <label class="flex items-center cursor-pointer hover:bg-gray-800 p-2 rounded transition">
                                <input type="radio" name="color" value="<%= color %>" 
                                    <%= selectedColor === color ? 'checked' : '' %>
                                    class="w-4 h-4 text-cyan-400 focus:ring-cyan-400">
                                <span class="w-5 h-5 rounded-full border-2 border-white ml-3" 
                                    style="background-color: <%= color.toLowerCase() %>;"></span>
                                <span class="ml-3 text-sm"><%= color %></span>
                            </label>
                        <% }); %>
                    </div>
                </div>

                <!-- Price Range Filter -->
                <div class="mb-6">
                    <h3 class="text-sm font-semibold mb-3 uppercase tracking-wide">Price Range</h3>
                    <div class="space-y-3">
                        <div class="grid grid-cols-2 gap-3">
                            <div>
                                <label class="block text-xs text-gray-400 mb-1">Min Price (₹)</label>
                                <input type="number" name="minPrice" value="<%= minPrice || '' %>" 
                                    placeholder="0"
                                    min="0"
                                    class="w-full px-3 py-2 bg-gray-800 border border-gray-700 rounded text-sm focus:outline-none focus:border-cyan-400">
                            </div>
                            <div>
                                <label class="block text-xs text-gray-400 mb-1">Max Price (₹)</label>
                                <input type="number" name="maxPrice" value="<%= maxPrice || '' %>" 
                                    placeholder="100000"
                                    min="0"
                                    class="w-full px-3 py-2 bg-gray-800 border border-gray-700 rounded text-sm focus:outline-none focus:border-cyan-400">
                            </div>
                        </div>
                        <p class="text-xs text-gray-500">Enter price range to filter products</p>
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="flex gap-3 pt-4 border-t border-gray-800">
                    <button type="submit" 
                        class="flex-1 bg-white text-black py-3 rounded-lg font-semibold hover:bg-gray-200 transition">
                        Apply Filters
                    </button>
                    <a href="/shop" 
                        class="px-6 py-3 bg-gray-800 text-white rounded-lg hover:bg-gray-700 transition font-semibold">
                        Clear
                    </a>
                </div>
            </form>
        </div>
    </div>

    <!-- Footer -->
    <%- include('../partials/footer') %>

    <script>
        function openFilterModal() {
            document.getElementById('filterModal').classList.remove('hidden');
            document.body.style.overflow = 'hidden';
        }

        function closeFilterModal() {
            document.getElementById('filterModal').classList.add('hidden');
            document.body.style.overflow = 'auto';
        }

        // Close modal when clicking outside
        document.getElementById('filterModal')?.addEventListener('click', function(e) {
            if (e.target === this) {
                closeFilterModal();
            }
        });

        // Close modal with Escape key
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape') {
                closeFilterModal();
            }
        });


        async function toggleWishlist(productId) {
            try {
                const response = await fetch('/wishlist/add', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ productId })
                });

                const result = await response.json();

                if (result.success) {
                    // Find the wishlist button for this product
                    const button = document.querySelector(`button[data-product-id="${productId}"]`);
                    const icon = button.querySelector('i');
                    
                    if (result.action === 'added') {
                        icon.className = 'fas fa-heart text-xs text-red-500';
                        Swal.fire({
                            icon: 'success',
                            title: 'Added to Wishlist!',
                            toast: true,
                            position: 'top-end',
                            showConfirmButton: false,
                            timer: 2000
                        });
                    } else {
                        icon.className = 'far fa-heart text-xs';
                        Swal.fire({
                            icon: 'success',
                            title: 'Removed from Wishlist',
                            toast: true,
                            position: 'top-end',
                            showConfirmButton: false,
                            timer: 2000
                        });
                    }
                } else {
                    Swal.fire({
                        title: 'Info',
                        text: result.message,
                        icon: 'info',
                        confirmButtonColor: '#1f2937'
                    });
                }
            } catch (error) {
                console.error('Error:', error);
                Swal.fire({
                    title: 'Error',
                    text: 'Failed to update wishlist',
                    icon: 'error',
                    confirmButtonColor: '#1f2937'
                });
            }
        }

    </script>
</body>
</html>
