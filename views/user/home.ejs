                                <% } else { %>
                                    <div class="w-full h-full bg-gray-100 rounded flex items-center justify-center text-gray-400 text-xs">
                                        [<%= product.category.name %>]
                                    </div>
                                <% } %>
                                <div class="absolute top-4 left-4 bg-cyan-400 text-black px-3 py-1 rounded-full text-xs font-bold">
                                    #<%= index + 1 %> BEST SELLER
                                </div>
                            </div>
                            <div class="p-4 bg-white text-black">
                                <% if (product.variants && product.variants.length > 0) { %>
                                    <div class="flex gap-2 mb-2">
                                        <% product.variants.slice(0, 3).forEach(variant => { %>
                                            <span class="w-3 h-3 rounded-full border border-gray-300" 
