    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        let currentCroppie = null;
        let selectedFile = null;

        // Handle image selection
        function handleImageSelect(event) {
            const file = event.target.files[0];
            if (!file) return;

            // Validate file type
            if (!file.type.startsWith('image/')) {
                Swal.fire({
                    icon: 'error',
                    title: 'Invalid File',
                    text: 'Please select an image file',
                    confirmButtonColor: '#ef4444'
                });
                return;
            }

            // Validate file size (max 5MB)
            if (file.size > 5 * 1024 * 1024) {
                Swal.fire({
                    icon: 'error',
                    title: 'File Too Large',
                    text: 'Image must be less than 5MB',
                    confirmButtonColor: '#ef4444'
                });
                return;
            }

            selectedFile = file;

            // Read and show crop modal
            const reader = new FileReader();
            reader.onload = function(e) {
                showCropModal(e.target.result);
            };
            reader.readAsDataURL(file);
        }

        // Show crop modal
        function showCropModal(imageData) {
            const modal = document.getElementById('cropModal');
            const container = document.getElementById('cropContainer');
            modal.classList.remove('hidden');

            // Clear previous croppie
            container.innerHTML = '';

            const cropDiv = document.createElement('div');
            cropDiv.style.width = '100%';
            cropDiv.style.height = '400px';
            container.appendChild(cropDiv);

            // Initialize Croppie
            currentCroppie = new Croppie(cropDiv, {
                viewport: { 
                    width: 250, 
                    height: 250, 
                    type: 'circle'  // Circular crop for profile photo
                },
                boundary: { width: 400, height: 400 },
                enableOrientation: true,
                enableResize: false
            });

            currentCroppie.bind({ url: imageData });
        }

        // Close crop modal
        function closeCropModal() {
            document.getElementById('cropModal').classList.add('hidden');
            if (currentCroppie) {
                currentCroppie.destroy();
                currentCroppie = null;
            }
            selectedFile = null;
            document.getElementById('profileImageInput').value = '';
        }

        // Crop and upload
        function cropAndUpload() {
            if (!currentCroppie) return;

            currentCroppie.result({
                type: 'blob',
                size: { width: 500, height: 500 },
                format: 'jpeg',
                quality: 0.9
            }).then(function(blob) {
                // Convert blob to file
                const fileName = `profile_${Date.now()}.jpg`;
                const file = new File([blob], fileName, { type: 'image/jpeg' });
                
                closeCropModal();
                uploadProfileImage(file);
            });
        }

        // Upload profile image
        async function uploadProfileImage(file) {
            const formData = new FormData();
            formData.append('profileImage', file);

            try {
                // Show loading
                Swal.fire({
                    title: 'Uploading...',
                    text: 'Please wait',
                    allowOutsideClick: false,
                    didOpen: () => {
                        Swal.showLoading();
                    }
                });

                const response = await fetch('/profile/uploadImage', {
                    method: 'POST',
                    body: formData
                });

                const result = await response.json();

                if (result.success) {
                    await Swal.fire({
                        icon: 'success',
                        title: 'Uploaded!',
                        text: 'Profile photo updated successfully',
                        confirmButtonColor: '#10b981'
                    });
                    location.reload();
                } else {
                    Swal.fire({
                        icon: 'error',
                        title: 'Upload Failed',
                        text: result.message,
                        confirmButtonColor: '#ef4444'
                    });
                }
            } catch (error) {
                console.error('Error:', error);
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: 'Failed to upload image',
                    confirmButtonColor: '#ef4444'
                });
            }
        }

        // Close modal when clicking outside
        document.getElementById('cropModal').addEventListener('click', (e) => {
            if (e.target.id === 'cropModal') {
                closeCropModal();
            }
        });
    </script>

