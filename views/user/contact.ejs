                                </div>
                            </div>

                            <!-- Phone and Subject -->
                            <div class="grid md:grid-cols-2 gap-4">
                                <div>
                                    <label class="block text-sm font-medium text-gray-300 mb-2">
                                        Phone Number
                                    </label>
                                    <input type="tel" name="phone"
                                        placeholder="Enter your phone number"
                                        class="form-input w-full px-4 py-3 rounded-lg text-white">
                                </div>
                                <div>
                                    <label class="block text-sm font-medium text-gray-300 mb-2">
                                        Subject <span class="text-red-400">*</span>
                                    </label>
                                    <input type="text" name="subject" required
                                        placeholder="What is this regarding?"
                                        class="form-input w-full px-4 py-3 rounded-lg text-white">
                                </div>
                            </div>

                            <!-- Message -->
                            <div>
                                <label class="block text-sm font-medium text-gray-300 mb-2">
                                    Message <span class="text-red-400">*</span>
                                </label>
                                <textarea name="message" rows="5" required
                                    placeholder="Tell us how we can help you..."
                                    class="form-input w-full px-4 py-3 rounded-lg text-white resize-none"></textarea>
                            </div>

                            <!-- Submit Button -->
                            <button type="submit" 
                                class="submit-btn w-full py-4 text-white font-semibold rounded-lg flex items-center justify-center gap-2">
