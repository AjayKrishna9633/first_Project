<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Checkout - GEARGRID</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/public/css/text-wrap.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    
    <style>
        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
            background-color: #000;
        }
        .form-input {
            transition: all 0.3s ease;
        }
        .form-input:focus {
            border-color: #06b6d4;
            box-shadow: 0 0 0 3px rgba(6, 182, 212, 0.1);
        }
        .checkout-btn {
            background: linear-gradient(135deg, #06b6d4, #3b82f6);
            transition: all 0.3s ease;
        }
        .checkout-btn:hover {
            background: linear-gradient(135deg, #0891b2, #2563eb);
            transform: translateY(-2px);
            box-shadow: 0 10px 25px rgba(6, 182, 212, 0.3);
        }
        .order-item {
            transition: all 0.3s ease;
        }
        .order-item:hover {
            background-color: #1f2937;
        }
        
        /* Custom SweetAlert2 Styles */
        .swal2-popup-custom {
            border-radius: 12px !important;
        }
        .swal2-confirm-custom {
            padding: 10px 24px !important;
            border-radius: 8px !important;
            font-weight: 600 !important;
        }
        .swal2-cancel-custom {
            padding: 10px 24px !important;
            border-radius: 8px !important;
            font-weight: 600 !important;
        }
        .swal2-html-container input:focus,
        .swal2-html-container select:focus {
            border-color: #06b6d4 !important;
            box-shadow: 0 0 0 2px rgba(6, 182, 212, 0.2) !important;
        }
    </style>
</head>
<body class="bg-black text-white">
    <!-- Header -->
    <%- include('../partials/header') %>

    <!-- Breadcrumb -->
    <div class="bg-gray-900 border-b border-gray-800 mt-20">
        <div class="max-w-7xl mx-auto px-6 py-4">
            <div class="flex items-center text-sm">
                <a href="/" class="text-gray-300 hover:text-white transition">Home</a>
                <i class="fas fa-chevron-right mx-2 text-xs text-gray-500"></i>
                <a href="/cart" class="text-gray-300 hover:text-white transition">Cart</a>
                <i class="fas fa-chevron-right mx-2 text-xs text-gray-500"></i>
                <span class="text-white font-medium">Checkout</span>
            </div>
        </div>
    </div>

    <!-- Page Title -->
    <div class="bg-gray-900 py-8 px-6 border-b border-gray-800">
        <div class="max-w-7xl mx-auto">
            <h1 class="text-4xl font-bold text-white mb-2">Checkout</h1>
            <p class="text-gray-400">
                <i class="fas fa-lock text-cyan-400"></i> Secure checkout process
            </p>
        </div>
    </div>

    <!-- Checkout Content -->
    <div class="max-w-7xl mx-auto py-12 px-6">
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
            <!-- Left Side - Shipping & Payment -->
            <div class="lg:col-span-2 space-y-8">
                
                <!-- Shipping Address -->
                <div class="bg-gray-900 rounded-lg border border-gray-800 p-6">
                    <div class="flex items-center justify-between mb-6">
                        <h2 class="text-xl font-semibold text-white">Shipping Address</h2>
                        <i class="fas fa-shipping-fast text-cyan-400"></i>
                    </div>

                    <!-- Address Selection -->
                    <% if (typeof addresses !== 'undefined' && addresses && addresses.length > 0) { %>
                        <div class="space-y-4 mb-4">
                            <% 
                                // Find default address or use first address
                                const defaultAddress = addresses.find(addr => addr.isDefault);
                                const defaultIndex = defaultAddress ? addresses.indexOf(defaultAddress) : 0;
                            %>
                            <% addresses.forEach((address, index) => { %>
                                <div class="border <%= address.isDefault ? 'border-cyan-400' : 'border-gray-700' %> rounded-lg p-4 hover:border-gray-600 transition cursor-pointer address-option" 
                                     data-address-id="<%= address._id %>">
                                    <div class="flex items-start justify-between">
                                        <div class="flex items-start gap-3">
                                            <input type="radio" name="selectedAddress" value="<%= address._id %>" 
                                                   class="mt-1 text-cyan-400 focus:ring-cyan-400" <%= index === defaultIndex ? 'checked' : '' %>>
                                            <div>
                                                <div class="flex items-center gap-2 mb-1">
                                                    <h3 class="font-semibold text-white"><%= address.name %></h3>
                                                    <% if (address.isDefault) { %>
                                                        <span class="text-xs bg-green-500 text-white px-2 py-0.5 rounded-full">
                                                            <i class="fas fa-check-circle"></i> Default
                                                        </span>
                                                    <% } %>
                                                </div>
                                                <p class="text-gray-400 text-sm mt-1">
                                                    <%= address.streetAddress %><br>
                                                    <%= address.city %>, <%= address.state %> <%= address.pinCode %><br>
                                                    India
                                                </p>
                                                <p class="text-gray-400 text-sm mt-1">
                                                    <i class="fas fa-phone text-xs"></i> <%= address.phone %>
                                                </p>
                                            </div>
                                        </div>
                                        <span class="text-xs bg-gray-800 px-2 py-1 rounded text-gray-300">
                                            <%= address.addressType %>
                                        </span>
                                    </div>
                                </div>
                            <% }); %>
                        </div>

                        <!-- Add New Address Button -->
                        <button type="button" onclick="toggleNewAddressForm()" 
                                class="w-full py-3 border-2 border-dashed border-gray-700 text-gray-400 rounded-lg hover:border-cyan-400 hover:text-cyan-400 transition flex items-center justify-center gap-2">
                            <i class="fas fa-plus"></i>
                            <span>Add New Address</span>
                        </button>
                    <% } else { %>
                        <!-- No addresses - Show add button prominently -->
                        <div class="text-center py-8 border-2 border-dashed border-gray-700 rounded-lg mb-4">
                            <i class="fas fa-map-marker-alt text-4xl text-gray-600 mb-3"></i>
                            <p class="text-gray-400 mb-4">No saved addresses found</p>
                            <button type="button" onclick="toggleNewAddressForm()" 
                                    class="px-6 py-3 bg-cyan-500 text-white rounded-lg hover:bg-cyan-600 transition inline-flex items-center gap-2">
                                <i class="fas fa-plus"></i>
                                <span>Add Your First Address</span>
                            </button>
                        </div>
                    <% } %>
                </div>

                <!-- Payment Method -->
                <div class="bg-gray-900 rounded-lg border border-gray-800 p-6">
                    <div class="flex items-center justify-between mb-6">
                        <h2 class="text-xl font-semibold text-white">Payment Method</h2>
                        <i class="fas fa-credit-card text-cyan-400"></i>
                    </div>

                    <div class="space-y-4">
                        <!-- Cash on Delivery -->
                        <div id="codOption" class="border border-gray-700 rounded-lg p-4 hover:border-gray-600 transition cursor-pointer payment-option" 
                             data-payment="cod">
                            <div class="flex items-center gap-3">
                                <input type="radio" id="codRadio" name="paymentMethod" value="cod" class="text-cyan-400 focus:ring-cyan-400" checked>
                                <div class="flex items-center gap-3">
                                    <i class="fas fa-money-bill-wave text-green-400 text-2xl"></i>
                                    <div class="flex-1">
                                        <h3 class="font-semibold text-white">Cash on Delivery</h3>
                                        <p class="text-gray-400 text-sm">Pay when you receive your order</p>
                                        <p id="codLimitWarning" class="text-yellow-400 text-xs mt-1 hidden">
                                            <i class="fas fa-exclamation-triangle"></i> Not available for orders above ₹1000
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Online Payment (Razorpay) -->
                        <div class="border border-gray-700 rounded-lg p-4 hover:border-gray-600 transition cursor-pointer payment-option" 
                             data-payment="online">
                            <div class="flex items-center gap-3">
                                <input type="radio" name="paymentMethod" value="online" class="text-cyan-400 focus:ring-cyan-400">
                                <div class="flex items-center gap-3">
                                    <i class="fas fa-credit-card text-cyan-400 text-2xl"></i>
                                    <div>
                                        <h3 class="font-semibold text-white">Online Payment</h3>
                                        <p class="text-gray-400 text-sm">Card, UPI, Net Banking & More</p>
                                        <div class="flex items-center gap-2 mt-1">
                                            <i class="fab fa-cc-visa text-blue-500"></i>
                                            <i class="fab fa-cc-mastercard text-red-500"></i>
                                            <i class="fas fa-mobile-alt text-purple-400"></i>
                                            <i class="fas fa-university text-yellow-400"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Order Notes -->
                <div class="bg-gray-900 rounded-lg border border-gray-800 p-6">
                    <h2 class="text-xl font-semibold text-white mb-4">Order Notes (Optional)</h2>
                    <textarea id="orderNotes" rows="3" 
                              class="form-input w-full px-4 py-3 bg-gray-800 border border-gray-700 rounded-lg text-white focus:outline-none resize-none"
                              placeholder="Any special instructions for your order..."></textarea>
                </div>
            </div>

            <!-- Right Side - Order Summary -->
            <div class="lg:col-span-1">
                <div class="bg-gray-900 rounded-lg border border-gray-800 p-6 sticky top-6">
                    <h2 class="text-xl font-semibold text-white mb-6">Your Order</h2>
                    
                    <!-- Order Items -->
                    <div class="space-y-4 mb-6 max-h-64 overflow-y-auto">
                        <% if (typeof cart !== 'undefined' && cart && cart.items.length > 0) { %>
                            <% cart.items.forEach(item => { %>
                                <% if (item.productId) { %>
                                    <div class="order-item flex gap-3 p-3 rounded-lg border border-gray-800">
                                        <!-- Product Image -->
                                        <div class="w-16 h-16 bg-white rounded-lg overflow-hidden flex-shrink-0">
                                            <% if (item.productId.variants && item.productId.variants.length > 0 && item.productId.variants[0].images && item.productId.variants[0].images.length > 0) { %>
                                                <img src="<%= item.productId.variants[0].images[0] %>" 
                                                     alt="<%= item.productId.productName %>"
                                                     class="w-full h-full object-cover">
                                            <% } else { %>
                                                <div class="w-full h-full flex items-center justify-center text-gray-400">
                                                    <i class="fas fa-image"></i>
                                                </div>
                                            <% } %>
                                        </div>
                                        
                                        <!-- Product Details -->
                                        <div class="flex-1 min-w-0">
                                            <h3 class="text-sm font-medium text-white truncate">
                                                <%= item.productId.productName %>
                                            </h3>
                                            <p class="text-xs text-gray-400 mt-1">
                                                Qty: <%= item.quantity %>
                                            </p>
                                            <p class="text-sm font-semibold text-cyan-400 mt-1">
                                                ₹<%= item.totalPrice.toLocaleString() %>
                                            </p>
                                        </div>
                                    </div>
                                <% } %>
                            <% }); %>
                        <% } else { %>
                            <div class="text-center py-8">
                                <i class="fas fa-shopping-cart text-4xl text-gray-700 mb-4"></i>
                                <p class="text-gray-400">No items in cart</p>
                            </div>
                        <% } %>
                    </div>


                    <!-- Coupon Section -->
                    <div class="space-y-4 mb-6 pt-4 border-t border-gray-800">
                        <div class="flex items-center justify-between">
                            <label class="block text-sm font-medium text-gray-300">Have a Coupon?</label>
                            <button onclick="showAvailableCoupons()" 
                                    class="text-xs text-cyan-400 hover:text-cyan-300 transition">
                                <i class="fas fa-tags"></i> View Available
                            </button>
                        </div>
                        
                        <div id="couponInputSection">
                            <div class="flex gap-2">
                                <input type="text" id="couponCode" 
                                       class="flex-1 bg-gray-800 border border-gray-700 rounded-lg px-4 py-2 text-white focus:outline-none focus:border-cyan-400 uppercase"
                                       placeholder="Enter Coupon Code">
                                <button onclick="applyCoupon()" 
                                        class="bg-cyan-500 hover:bg-cyan-600 text-white px-4 py-2 rounded-lg transition font-medium">
                                    Apply
                                </button>
                            </div>
                        </div>
                        
                        <div id="appliedCouponSection" class="hidden">
                            <div class="bg-green-900/30 border border-green-500/50 rounded-lg p-3">
                                <div class="flex items-center justify-between">
                                    <div class="flex items-center gap-2">
                                        <i class="fas fa-check-circle text-green-400"></i>
                                        <div>
                                            <p class="text-sm font-medium text-white" id="appliedCouponName"></p>
                                            <p class="text-xs text-gray-400">Coupon applied successfully</p>
                                        </div>
                                    </div>
                                    <button onclick="removeCoupon()" 
                                            class="text-red-400 hover:text-red-300 transition text-sm">
                                        <i class="fas fa-times"></i> Remove
                                    </button>
                                </div>
                            </div>
                        </div>
                        
                        <div id="couponMessage" class="text-xs"></div>
                    </div>

                    <!-- Wallet Section -->
                    <div class="space-y-3 mb-6 pt-4 border-t border-gray-800">
                         <div class="flex items-center justify-between">
                            <div class="flex items-center gap-2">
                                <input type="checkbox" id="useWallet" onchange="toggleWallet()"
                                       class="w-4 h-4 text-cyan-500 bg-gray-800 border-gray-700 rounded focus:ring-cyan-500 focus:ring-2">
                                <label for="useWallet" class="text-sm text-gray-300">
                                    Use Wallet Balance
                                </label>
                            </div>
                            <span class="text-sm font-medium text-cyan-400">
                                Available: ₹<%= typeof walletBalance !== 'undefined' ? walletBalance.toLocaleString() : '0' %>
                            </span>
                        </div>
                    </div>

                    <!-- Order Summary -->
                    <div class="space-y-3 mb-6 border-t border-gray-800 pt-4">
                        <div class="flex justify-between text-gray-400">
                            <span>Subtotal</span>
                            <span id="subtotalDisplay">₹<%= typeof cart !== 'undefined' && cart ? cart.items.reduce((total, item) => total + item.totalPrice, 0).toLocaleString() : '0' %></span>
                        </div>
                        
                        <div class="flex justify-between text-gray-400">
                            <span>Shipping</span>
                            <span class="text-green-400">Free</span>
                        </div>
                        
                        <div id="discountRow" class="flex justify-between text-gray-400 hidden">
                            <span>Coupon Discount</span>
                            <span id="discountDisplay" class="text-green-400">-₹0</span>
                        </div>
                        
                        <div id="walletRow" class="flex justify-between text-gray-400 hidden">
                             <span>Wallet Used</span>
                             <span id="walletUsedDisplay" class="text-cyan-400">-₹0</span>
                        </div>
                        
                        <div class="flex justify-between text-gray-400">
                            <span>Tax</span>
                            <span>₹0</span>
                        </div>
                        
                        <div class="border-t border-gray-700 pt-3">
                            <div class="flex justify-between text-xl font-bold text-white">
                                <span>Total Payable</span>
                                <span id="totalDisplay" class="text-cyan-400">₹<%= typeof cart !== 'undefined' && cart ? cart.items.reduce((total, item) => total + item.totalPrice, 0).toLocaleString() : '0' %></span>
                            </div>
                        </div>
                    </div>

                    <!-- Place Order Button -->
                    <button onclick="placeOrder()" 
                            class="checkout-btn w-full py-4 text-white font-semibold rounded-lg mb-4">
                        <i class="fas fa-lock mr-2"></i>
                        Place Order
                    </button>

                    <!-- Security Info -->
                    <div class="text-center">
                        <div class="flex items-center justify-center gap-2 text-sm text-gray-400 mb-2">
                            <i class="fas fa-shield-alt text-green-400"></i>
                            <span>256-bit SSL Encryption</span>
                        </div>
                        <div class="flex items-center justify-center gap-4 text-xs text-gray-500">
                            <i class="fab fa-cc-visa text-lg"></i>
                            <i class="fab fa-cc-mastercard text-lg"></i>
                            <i class="fab fa-cc-amex text-lg"></i>
                            <i class="fab fa-paypal text-lg"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <%- include('../partials/footer') %>

    <script src="https://checkout.razorpay.com/v1/checkout.js"></script>
    <script>
        // Global Variables
        const cartTotal = <%= typeof cart !== 'undefined' && cart ? cart.items.reduce((total, item) => total + item.totalPrice, 0) : 0 %>;
        const walletBalance = <%= typeof walletBalance !== 'undefined' ? walletBalance : 0 %>;
        let appliedCouponCode = null;
        let currentDiscount = 0;

        // Calculate Final Total (before wallet deduction)
        function calculateFinalTotal() {
            return cartTotal - currentDiscount;
        }

        // Initialize on page load
        document.addEventListener('DOMContentLoaded', function() {
            updateTotal();
        });

        // Show Available Coupons
        async function showAvailableCoupons() {
            try {
                const response = await fetch('/checkout/available-coupons');
                const result = await response.json();
                
                if (result.success && result.coupons.length > 0) {
                    const couponsHtml = result.coupons.map(coupon => {
                        const discountText = coupon.discountType === 'percentage' 
                            ? `${coupon.offerPrice}% OFF` 
                            : `₹${coupon.offerPrice} OFF`;
                        
                        const maxDiscountText = coupon.maxDiscountAmount 
                            ? `<br><span class="text-sm text-gray-600">Max discount: ₹${coupon.maxDiscountAmount}</span>` 
                            : '';
                        
                        return `
                            <div class="border-2 border-gray-300 rounded-lg p-4 hover:border-cyan-500 transition cursor-pointer bg-white"
                                 onclick="applyCouponCode('${coupon.code}')">
                                <div class="flex items-start justify-between">
                                    <div class="flex-1">
                                        <div class="flex items-center gap-2 mb-2">
                                            <span class="bg-cyan-500 text-white px-3 py-1 rounded-md font-bold text-sm">
                                                ${coupon.code}
                                            </span>
                                            <span class="text-green-600 font-semibold text-lg">${discountText}</span>
                                        </div>
                                        <p class="text-base text-gray-800 mb-2 font-medium">${coupon.description}</p>
                                        <p class="text-sm text-gray-700">
                                            Min. purchase: <span class="font-semibold">₹${coupon.minimumPrice}</span>${maxDiscountText}
                                        </p>
                                        <p class="text-sm text-gray-600 mt-1">
                                            Valid till: ${new Date(coupon.endDate).toLocaleDateString()}
                                        </p>
                                    </div>
                                    <button class="text-cyan-500 hover:text-cyan-600 text-sm font-semibold px-3 py-1 border-2 border-cyan-500 rounded-lg hover:bg-cyan-50 transition">
                                        Apply <i class="fas fa-arrow-right ml-1"></i>
                                    </button>
                                </div>
                            </div>
                        `;
                    }).join('');
                    
                    Swal.fire({
                        title: '<i class="fas fa-tags text-cyan-500"></i> <span style="color: #1f2937;">Available Coupons</span>',
                        html: `
                            <div class="text-left space-y-3 mt-4 max-h-96 overflow-y-auto">
                                ${couponsHtml}
                            </div>
                            <div class="mt-4 text-sm text-gray-700 text-center bg-blue-50 p-3 rounded-lg">
                                <i class="fas fa-info-circle text-blue-600"></i> <span class="font-medium">Click on any coupon to apply</span>
                            </div>
                        `,
                        showConfirmButton: false,
                        showCloseButton: true,
                        width: '600px',
                        background: '#f9fafb',
                        customClass: {
                            popup: 'swal2-popup-custom',
                            closeButton: 'text-gray-600 hover:text-gray-800'
                        }
                    });
                } else {
                    Swal.fire({
                        icon: 'info',
                        title: 'No Coupons Available',
                        text: 'There are no active coupons at the moment. Check back later!',
                        confirmButtonColor: '#06b6d4'
                    });
                }
            } catch (error) {
                console.error('Fetch coupons error:', error);
                Swal.fire('Error', 'Failed to load coupons', 'error');
            }
        }

        // Apply Coupon Code (from available coupons list)
        function applyCouponCode(code) {
            Swal.close();
            document.getElementById('couponCode').value = code;
            applyCoupon();
        }

        // Apply Coupon
        async function applyCoupon() {
            const couponCode = document.getElementById('couponCode').value.trim().toUpperCase();
            const couponMessage = document.getElementById('couponMessage');
            
            if (!couponCode) {
                couponMessage.innerHTML = '<span class="text-red-400"><i class="fas fa-exclamation-circle"></i> Please enter a coupon code</span>';
                return;
            }

            try {
                const response = await fetch('/checkout/apply-coupon', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        couponCode: couponCode,
                        cartTotal: cartTotal
                    })
                });

                const result = await response.json();

                if (result.success) {
                    appliedCouponCode = result.couponCode;
                    currentDiscount = result.discountAmount;
                    
                    document.getElementById('couponInputSection').classList.add('hidden');
                    document.getElementById('appliedCouponSection').classList.remove('hidden');
                    document.getElementById('appliedCouponName').textContent = result.couponCode;
                    
                    document.getElementById('discountRow').classList.remove('hidden');
                    document.getElementById('discountDisplay').textContent = `-₹${result.discountAmount.toLocaleString()}`;
                    
                    updateTotal();
                    
                    couponMessage.innerHTML = '';
                    
                    Swal.fire({
                        icon: 'success',
                        title: 'Coupon Applied!',
                        text: `You saved ₹${result.discountAmount}`,
                        timer: 2000,
                        showConfirmButton: false
                    });
                } else {
                    couponMessage.innerHTML = `<span class="text-red-400"><i class="fas fa-times-circle"></i> ${result.message}</span>`;
                }
            } catch (error) {
                console.error('Apply coupon error:', error);
                couponMessage.innerHTML = '<span class="text-red-400">Failed to apply coupon</span>';
            }
        }

        // Remove Coupon
        function removeCoupon() {
            appliedCouponCode = null;
            currentDiscount = 0;
            
            document.getElementById('couponInputSection').classList.remove('hidden');
            document.getElementById('appliedCouponSection').classList.add('hidden');
            document.getElementById('couponCode').value = '';
            
            document.getElementById('discountRow').classList.add('hidden');
            document.getElementById('discountDisplay').textContent = '-₹0';
            
            updateTotal();
            
            document.getElementById('couponMessage').innerHTML = '<span class="text-gray-400"><i class="fas fa-info-circle"></i> Coupon removed</span>';
            
            setTimeout(() => {
                document.getElementById('couponMessage').innerHTML = '';
            }, 3000);
        }

        // Toggle Wallet
        function toggleWallet() {
            updateTotal();
        }

        // Update Total
        function updateTotal() {
            const useWallet = document.getElementById('useWallet').checked;
            let total = cartTotal - currentDiscount;
            let walletUsed = 0;

            if (useWallet && walletBalance > 0) {
                if (walletBalance >= total) {
                    walletUsed = total;
                    total = 0;
                } else {
                    walletUsed = walletBalance;
                    total -= walletBalance;
                }
                document.getElementById('walletRow').classList.remove('hidden');
                document.getElementById('walletUsedDisplay').textContent = `-₹${walletUsed.toLocaleString()}`;
            } else {
                document.getElementById('walletRow').classList.add('hidden');
            }

            // Check COD availability based on order total (before wallet deduction)
            const orderTotalBeforeWallet = cartTotal - currentDiscount;
            const codOption = document.getElementById('codOption');
            const codRadio = document.getElementById('codRadio');
            const codWarning = document.getElementById('codLimitWarning');
            const onlineRadio = document.querySelector('input[name="paymentMethod"][value="online"]');
            
            if (orderTotalBeforeWallet > 1000) {
                // Disable COD
                codRadio.disabled = true;
                codOption.classList.add('opacity-50', 'cursor-not-allowed');
                codOption.classList.remove('hover:border-gray-600', 'cursor-pointer');
                codWarning.classList.remove('hidden');
                
                // If COD is currently selected, switch to online payment
                if (codRadio.checked) {
                    onlineRadio.checked = true;
                }
            } else {
                // Enable COD
                codRadio.disabled = false;
                codOption.classList.remove('opacity-50', 'cursor-not-allowed');
                codOption.classList.add('hover:border-gray-600', 'cursor-pointer');
                codWarning.classList.add('hidden');
            }

            document.getElementById('totalDisplay').textContent = `₹${Math.round(total).toLocaleString()}`;
        }

        // Place Order
        async function placeOrder() {
            const selectedAddress = document.querySelector('input[name="selectedAddress"]:checked');
            const paymentMethodInput = document.querySelector('input[name="paymentMethod"]:checked');

            let payload = {
                paymentMethod: paymentMethodInput.value,
                orderNotes: document.getElementById('orderNotes').value,
                couponCode: appliedCouponCode,
                useWallet: document.getElementById('useWallet').checked
            };

            // Address Validation and Payload Construction
            if (selectedAddress) {
                payload.addressId = selectedAddress.value;
            } else {
                Swal.fire('Error', 'Please select or add a delivery address', 'error');
                return;
            }

            if (!paymentMethodInput) {
                Swal.fire('Error', 'Please select a payment method', 'error');
                return;
            }

            // Validate COD limit - Orders above Rs 1000 cannot use COD
            const finalTotal = calculateFinalTotal();
            if (paymentMethodInput.value === 'cod' && finalTotal > 1000) {
                Swal.fire({
                    title: 'COD Not Available',
                    text: 'Cash on Delivery is not available for orders above ₹1000. Please choose online payment or use wallet.',
                    icon: 'warning',
                    confirmButtonColor: '#22d3ee',
                    confirmButtonText: 'OK'
                });
                return;
            }


            try {
                const response = await fetch('/checkout/place-order', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(payload)
                });
                
                const result = await response.json();

                if (result.success) {
                    if (result.razorpayOrder) {
                        // Initialize Razorpay
                        const options = {
                            "key": result.razorpayOrder.key_id,
                            "amount": result.razorpayOrder.amount,
                            "currency": result.razorpayOrder.currency,
                            "name": result.razorpayOrder.name,
                            "description": result.razorpayOrder.description,
                            "image": "/logo.png", // specific path if available
                            "order_id": result.razorpayOrder.id,
                            "handler": async function (response){
                                // Verify Payment
                                try {
                                    const verifyResponse = await fetch('/checkout/verify-payment', {
                                        method: 'POST',
                                        headers: { 'Content-Type': 'application/json' },
                                        body: JSON.stringify({
                                            razorpay_payment_id: response.razorpay_payment_id,
                                            razorpay_order_id: response.razorpay_order_id,
                                            razorpay_signature: response.razorpay_signature,
                                            order_id: result.orderId
                                        })
                                    });
                                    const verifyResult = await verifyResponse.json();
                                    
                                    if(verifyResult.success){
                                         Swal.fire({
                                            title: 'Order Placed!',
                                            text: 'Your order has been placed successfully.',
                                            icon: 'success',
                                            confirmButtonColor: '#22d3ee'
                                        }).then(() => {
                                            window.location.href = `/orders/success?orderId=${result.orderId}`; // Redirect to success page
                                        }); 
                                    } else {
                                        Swal.fire('Payment Failed', 'Payment verification failed. Please try again or contact support.', 'error');
                                         window.location.href = `/orders/failed?orderId=${result.orderId}`;
                                    }

                                } catch (err) {
                                    console.error("Verification Error", err);
                                    Swal.fire('Error', 'Payment verification error', 'error');
                                }
                            },
                            "prefill": {
                                "contact": result.razorpayOrder.contact,
                                "email": result.razorpayOrder.email
                            },
                            "theme": {
                                "color": "#22d3ee"
                            },
                             "modal": {
                                "ondismiss": async function(){
                                    // Cancel the payment and mark order as cancelled
                                    try {
                                        await fetch('/checkout/cancel-payment', {
                                            method: 'POST',
                                            headers: { 'Content-Type': 'application/json' },
                                            body: JSON.stringify({ order_id: result.orderId })
                                        });
                                    } catch (err) {
                                        console.error('Cancel payment error:', err);
                                    }
                                    
                                    Swal.fire('Payment Cancelled', 'You cancelled the payment. Order has been cancelled.', 'info')
                                    .then(() => {
                                         window.location.href = `/orders/failed?orderId=${result.orderId}`;
                                    });
                                }
                            }
                        };
                        const rzp1 = new Razorpay(options);
                        rzp1.open();
                        
                    } else {
                        // COD or Full Wallet
                        Swal.fire({
                            title: 'Order Placed!',
                            text: result.message,
                            icon: 'success',
                            confirmButtonColor: '#22d3ee'
                        }).then(() => {
                            window.location.href = `/orders/success?orderId=${result.orderId}`;
                        });
                    }
                } else {
                    Swal.fire('Error', result.message, 'error');
                }
                
                

            } catch (error) {
                console.error('Place order error:', error);
                Swal.fire('Error', 'Failed to place order', 'error');
            }
        }

