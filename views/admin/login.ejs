<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>GEARGRID - Admin Login</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="/public/css/text-wrap.css">
</head>
<body class="bg-gray-100 min-h-screen">
    <!-- Header -->
    <header class="bg-black text-white px-6 py-4 flex justify-between items-center">
        <h1 class="text-2xl font-bold tracking-wide">GEARGRID</h1>
       
    </header>

    <!-- Main Content -->
    <div class="flex items-center justify-center min-h-[calc(100vh-64px)] p-4">
        <div class="bg-gray-200 rounded-lg shadow-2xl p-12 w-full max-w-md">
            <h2 class="text-2xl font-semibold text-center mb-8">Admin login</h2>
            
            <form id="adminLoginForm" action="/admin/login" method="POST" class="space-y-6">
                <!-- Email Field -->
                <div>
                    <label for="email" class="block text-sm font-medium text-gray-700 mb-2">
                        Email
                    </label>
                    <input 
                        type="email" 
                        id="email"
                        name="email"
                        placeholder="Enter your email"
                        class="w-full px-4 py-2 border border-gray-400 rounded focus:outline-none focus:ring-2 focus:ring-gray-500"
                    >
                    <div id="emailError" class="hidden mt-1 text-red-600 text-sm flex items-center gap-1">
                        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
                        </svg>
                        <span></span>
                    </div>
                </div>

                <!-- Password Field -->
                <div>
                    <div class="flex justify-between items-center mb-2">
                        <label for="password" class="block text-sm font-medium text-gray-700">
                            Password
                        </label>
                        <a href="#" class="text-xs text-blue-600 hover:underline">forgot password</a>
                    </div>
                    <input 
                        type="password" 
                        id="password"
                        name="password"
                        placeholder="Password"
                        class="w-full px-4 py-2 border border-gray-400 rounded focus:outline-none focus:ring-2 focus:ring-gray-500"
                    >
                    <div id="passwordError" class="hidden mt-1 text-red-600 text-sm flex items-center gap-1">
                        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
                        </svg>
                        <span></span>
                    </div>
                </div>

                <!-- Login Button -->
                <button 
                    type="submit"
                    class="w-full bg-gray-600 hover:bg-gray-700 text-white font-medium py-2.5 rounded transition duration-200"
                >
                    Login
                </button>
            </form>
        </div>
    </div>
    <script src="/public/admin/adminLoginValidation.js"></script>
</body>
</html>
