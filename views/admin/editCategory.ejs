<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Category - GEARGRID Admin</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/public/css/text-wrap.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    
    <!-- Category Form Validation -->
    <script src="/public/admin/categoryFormValidation.js"></script>
</head>
<body class="bg-gray-50">
    <div class="flex h-screen overflow-hidden">
        <!-- Sidebar -->
        <%- include('../partials/adminSidebar', { currentPage: 'categories' }) %>

        <!-- Main Content Area -->
        <div class="flex-1 flex flex-col overflow-hidden">
            <!-- Header -->
            <%- include('../partials/adminHeader', { admin: admin }) %>

            <!-- Main Content -->
            <main class="flex-1 overflow-y-auto p-6">
                <!-- Breadcrumb -->
                <div class="mb-6">
                    <div class="flex items-center text-sm text-gray-600 mb-4">
                        <a href="/admin/categories" class="hover:text-gray-900">Categories</a>
                        <svg class="w-4 h-4 mx-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                        </svg>
                        <span class="text-gray-900 font-medium">Edit Category</span>
                    </div>
                    <h2 class="text-2xl font-bold text-gray-900">Edit Category</h2>
                    <p class="text-sm text-gray-600 mt-1">Update category information</p>
                </div>

                <!-- Error/Success Message -->
                <% if (typeof message !== 'undefined' && message) { %>
                    <div class="mb-6 px-4 py-3 rounded-lg border flex items-center gap-3 <%= isError ? 'bg-red-50 border-red-200 text-red-800' : 'bg-green-50 border-green-200 text-green-800' %>">
                        <svg class="w-5 h-5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                            <% if (isError) { %>
                                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
                            <% } else { %>
                                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                            <% } %>
                        </svg>
                        <span><%= message %></span>
                    </div>
                <% } %>

                <!-- Edit Category Form -->
                <div class="max-w-2xl">
                    <form id="editCategoryForm" class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
                        
                        <!-- Category Name -->
                        <div class="mb-5">
                            <label class="block text-sm font-semibold text-gray-700 mb-2">Category Name *</label>
                            <input 
                                id="name"
                                type="text" 
                                name="name" 
                                value="<%= category.name %>"
                                class="w-full px-4 py-2.5 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-gray-900 focus:border-transparent transition"
                            >
                            <p class="text-xs text-red-600 mt-1 hidden error-message"></p>
                        </div>

                        <!-- Description -->
                        <div class="mb-6">
                            <label class="block text-sm font-semibold text-gray-700 mb-2">Description *</label>
                            <textarea 
                                id="description"
                                name="description" 
                                rows="4"
                                class="w-full px-4 py-2.5 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-gray-900 focus:border-transparent transition resize-none"
                            ><%= category.description %></textarea>
                            <p class="text-xs text-gray-500 mt-1">10-500 characters</p>
                            <p class="text-xs text-red-600 mt-1 hidden error-message"></p>
                        </div>

                        <!-- Category Offer Section -->
                        <div class="mb-6 p-4 bg-gray-50 rounded-lg border border-gray-200">
                            <h3 class="text-sm font-semibold text-gray-700 mb-4 flex items-center gap-2">
                                <svg class="w-5 h-5 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v13m0-13V6a2 2 0 112 2h-2zm0 0V5.5A2.5 2.5 0 109.5 8H12zm-7 4h14M5 12a2 2 0 110-4h14a2 2 0 110 4M5 12v7a2 2 0 002 2h10a2 2 0 002-2v-7"/>
                                </svg>
                                Category Offer (Optional)
                            </h3>
                            
                            <div class="grid grid-cols-2 gap-4">
                                <!-- Offer Type -->
                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-2">Offer Type</label>
                                    <select 
                                        name="offerType" 
                                        id="offerType"
                                        class="w-full px-4 py-2.5 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-gray-900 focus:border-transparent transition"
                                    >
                                        <option value="none" <%= category.offerType === 'none' || !category.offerType ? 'selected' : '' %>>No Offer</option>
                                        <option value="percentage" <%= category.offerType === 'percentage' ? 'selected' : '' %>>Percentage (%)</option>
                                        <option value="flat" <%= category.offerType === 'flat' ? 'selected' : '' %>>Flat Amount (â‚¹)</option>
                                    </select>
                                </div>

                                <!-- Offer Value -->
                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-2">Offer Value</label>
                                    <input 
                                        type="number" 
                                        name="offerValue" 
                                        id="offerValue"
                                        step="0.01"
                                        value="<%= category.offerValue || 0 %>"
                                        class="w-full px-4 py-2.5 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-gray-900 focus:border-transparent transition"
                                        placeholder="Enter value"
                                    >
                                    <p class="text-xs text-red-600 mt-1 hidden error-message"></p>
                                </div>
                            </div>
                            
                            <p class="text-xs text-gray-500 mt-2">
                                <i class="fas fa-info-circle mr-1"></i>
                                This offer will apply to all products in this category
                            </p>
                        </div>

                        <!-- Buttons -->
                        <div class="flex gap-3 pt-4 border-t border-gray-200">
                            <button 
                                type="submit"
                                id="submitBtn"
                                class="flex-1 px-6 py-3 bg-gray-900 text-white rounded-lg hover:bg-gray-800 transition font-medium flex items-center justify-center gap-2"
                            >
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                                </svg>
                                <span>Update Category</span>
                            </button>
                            <a 
                                href="/admin/categories"
                                class="px-6 py-3 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200 transition font-medium"
                            >
                                Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </main>
        </div>
    </div>
    <script>
        // Custom submit function for edit category form
        async function submitCategoryForm() {
            const categoryId = '<%= category._id %>';
            const name = document.getElementById('name').value.trim();
            const description = document.getElementById('description').value.trim();
            const offerType = document.getElementById('offerType').value;
            const offerValue = document.getElementById('offerValue').value;
            const submitBtn = document.getElementById('submitBtn');

            const formData = {
                name: name,
                description: description,
                offerType: offerType,
                offerValue: parseFloat(offerValue) || 0
            };

            // Show loading state
            const originalText = submitBtn.innerHTML;
            submitBtn.disabled = true;
            submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin mr-2"></i>Updating...';

            try {
                const response = await fetch(`/admin/category/edit/${categoryId}`, {
                    method: "PUT",
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(formData)
                });
                
                const data = await response.json();
                
                if (data.success) {
                    await Swal.fire({
                        title: 'Success!',
                        text: data.message,
                        icon: 'success',
                        confirmButtonColor: '#1f2937'
                    });
                    window.location.href = '/admin/categories';
                } else {
                    submitBtn.disabled = false;
                    submitBtn.innerHTML = originalText;
                    Swal.fire({
                        title: 'Error!',
                        text: data.message,
                        icon: 'error',
                        confirmButtonColor: '#1f2937'
                    });
                }
            } catch (error) {
                console.error('Error:', error);
                submitBtn.disabled = false;
                submitBtn.innerHTML = originalText;
                Swal.fire({
                    title: 'Error!',
                    text: 'Something went wrong. Please try again.',
                    icon: 'error',
                    confirmButtonColor: '#1f2937'
                });
            }
        }

        // Expose function globally for validation script
        window.submitCategoryForm = submitCategoryForm;
    </script>
</body>
</html>
