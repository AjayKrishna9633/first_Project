<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Order Details - Admin</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/public/css/text-wrap.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        // Helper function to format return reasons
        function formatReturnReason(reason) {
            const reasonMap = {
                'DEFECTIVE': 'Defective product',
                'DAMAGED_SHIPPING': 'Damaged during shipping',
                'WRONG_ITEM': 'Wrong item received',
                'NO_LONGER_NEEDED': 'No longer needed',
                'BETTER_PRICE': 'Found better price elsewhere',
                'ORDERED_MISTAKE': 'Ordered by mistake',
                'LATE_ARRIVAL': 'Late arrival',
                'OTHER': 'Other'
            };
            return reasonMap[reason] || reason;
        }
    </script>
    <style>
        /* Tooltip styling for formatted numbers */
        [title] {
            cursor: help;
            position: relative;
        }
        
        [title]:hover::after {
            content: attr(title);
            position: absolute;
            bottom: 100%;
            left: 50%;
            transform: translateX(-50%);
            background: rgba(0, 0, 0, 0.9);
            color: white;
            padding: 4px 8px;
            border-radius: 4px;
            font-size: 12px;
            white-space: nowrap;
            z-index: 1000;
            pointer-events: none;
        }
        
        [title]:hover::before {
            content: '';
            position: absolute;
            bottom: 95%;
            left: 50%;
            transform: translateX(-50%);
            border: 4px solid transparent;
            border-top-color: rgba(0, 0, 0, 0.9);
            z-index: 1000;
            pointer-events: none;
        }
    </style>
</head>
<body class="bg-gray-100">
    <div class="container mx-auto px-6 py-8">
        <!-- Header -->
        <div class="flex justify-between items-center mb-8">
            <div>
                <h1 class="text-3xl font-bold text-gray-800">Order Details</h1>
                <p class="text-gray-600 mt-2">Order #<%= order.orderNumber %></p>
            </div>
            <div class="flex gap-3">
                <a href="/admin/orders" class="bg-gray-600 text-white px-4 py-2 rounded-lg hover:bg-gray-700 transition">
                    <i class="fas fa-arrow-left mr-2"></i>Back to Orders
                </a>
                <% if (order.orderStatus === 'confirmed' || order.orderStatus === 'processing' || order.orderStatus === 'shipped' || order.orderStatus === 'delivered') { %>
                    <a href="/admin/orders/<%= order._id %>/invoice" target="_blank" class="bg-green-600 text-white px-4 py-2 rounded-lg hover:bg-green-700 transition">
                        <i class="fas fa-download mr-2"></i>Download Invoice
                    </a>
                <% } %>
                <button onclick="updateOrderStatus('<%= order._id %>', '<%= order.orderStatus %>', '<%= order.paymentStatus %>')" class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition">
                    <i class="fas fa-edit mr-2"></i>Update Status
                </button>
            </div>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
            <!-- Order Information -->
            <div class="lg:col-span-2 space-y-6">
                <!-- Order Items -->
                <div class="bg-white rounded-lg shadow p-6">
                    <h2 class="text-xl font-semibold text-gray-800 mb-4">Order Items</h2>
                    <div class="space-y-4">
                        <% order.items.forEach(item => { %>
                            <div class="flex items-center gap-4 p-4 border border-gray-200 rounded-lg <%= item.status === 'cancelled' ? 'opacity-60 bg-gray-50' : '' %>">
                                <div class="w-16 h-16 bg-gray-100 rounded-lg overflow-hidden">
                                    <% if (item.variantId && item.variantId.images && item.variantId.images.length > 0) { %>
                                        <img src="<%= item.variantId.images[0] %>" alt="Product" class="w-full h-full object-cover">
                                    <% } else { %>
                                        <div class="w-full h-full flex items-center justify-center text-gray-400">
                                            <i class="fas fa-image"></i>
                                        </div>
                                    <% } %>
                                </div>
                                <div class="flex-1">
                                    <h3 class="font-medium text-gray-900">
                                        <%= item.productId.productName %>
                                        <% if (item.status === 'cancelled') { %>
                                            <span class="ml-2 px-2 py-1 text-xs bg-red-100 text-red-800 rounded-full">
                                                <i class="fas fa-times mr-1"></i>Cancelled
                                            </span>
                                        <% } %>
                                    </h3>
                                    <p class="text-sm text-gray-500">
                                        Color: <%= item.variantId?.color || 'N/A' %> | 
                                        Quantity: <%= item.quantity %>
                                    </p>
                                    <p class="text-sm font-medium text-gray-900" title="₹<%= getFullNumber(item.price) %> each">
                                        <%= formatCurrency(item.price) %> each
                                    </p>
                                    <% if (item.status === 'cancelled' && item.cancellationReason) { %>
                                        <p class="text-xs text-red-600 mt-1">
                                            <i class="fas fa-info-circle mr-1"></i>
                                            Cancelled by <%= item.cancelledBy %>: <%= item.cancellationReason %>
                                        </p>
                                    <% } %>
                                </div>
                                <div class="text-right">
                                    <p class="font-semibold text-gray-900 <%= item.status === 'cancelled' ? 'line-through text-gray-500' : '' %>" title="₹<%= getFullNumber(item.totalPrice) %>">
                                        <%= formatCurrency(item.totalPrice) %>
                                    </p>
                                </div>
                            </div>
                        <% }); %>
                    </div>
                </div>

                <!-- Return Requests Section -->
                <% if (order.returnStatus !== 'none') { %>
                    <div class="bg-white rounded-lg shadow p-6">
                        <div class="flex items-center mb-4">
                            <i class="fas fa-undo text-orange-500 text-xl mr-3"></i>
                            <h2 class="text-xl font-semibold text-gray-800">Return Requests (1)</h2>
                        </div>

                        <div class="overflow-x-auto">
                            <table class="min-w-full">
                                <thead class="bg-gray-50">
                                    <tr>
                                        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Product</th>
                                        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Reason</th>
                                        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Refund Amount</th>
                                        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Requested Date</th>
                                        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Status</th>
                                        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Actions</th>
                                    </tr>
                                </thead>
                                <tbody class="bg-white">
                                    <tr class="border-t">
                                        <td class="px-4 py-4">
                                            <div class="flex items-center">
                                                <% if (order.items[0].productId.variants && order.items[0].productId.variants[0] && order.items[0].productId.variants[0].images && order.items[0].productId.variants[0].images[0]) { %>
                                                    <img src="<%= order.items[0].productId.variants[0].images[0] %>" 
                                                         alt="Product" class="w-12 h-12 object-cover rounded mr-3">
                                                <% } %>
                                                <div>
                                                    <div class="font-medium text-gray-900">
                                                        <%= order.items[0].productId.productName %>
                                                    </div>
                                                    <div class="text-sm text-gray-500">
                                                        Color: <%= order.items[0].variantId.color %>
                                                    </div>
                                                </div>
                                            </div>
                                        </td>
                                        <td class="px-4 py-4">
                                            <div class="text-sm text-gray-900">
                                                <script>document.write(formatReturnReason('<%= order.returnReason %>'));</script>
                                            </div>
                                            <% if (order.returnNotes) { %>
                                                <div class="text-xs text-gray-500 mt-1"><%= order.returnNotes %></div>
                                            <% } %>
                                        </td>
                                        <td class="px-4 py-4">
                                            <div class="text-sm font-medium text-gray-900" title="₹<%= getFullNumber(order.totalAmount) %>">
                                                <%= formatCurrency(order.totalAmount) %>
                                            </div>
                                        </td>
                                        <td class="px-4 py-4">
                                            <div class="text-sm text-gray-900">
                                                <%= new Date(order.returnRequestDate).toLocaleDateString('en-GB', { 
                                                    day: '2-digit', 
                                                    month: 'short', 
                                                    year: 'numeric' 
                                                }) %>, 
                                                <%= new Date(order.returnRequestDate).toLocaleTimeString('en-GB', { 
                                                    hour: '2-digit', 
                                                    minute: '2-digit', 
                                                    hour12: true 
                                                }) %>
                                            </div>
                                        </td>
                                        <td class="px-4 py-4">
                                            <span class="px-2 py-1 text-xs font-medium rounded-full 
                                                <%= order.returnStatus === 'requested' ? 'bg-yellow-100 text-yellow-800' : 
                                                    order.returnStatus === 'approved' ? 'bg-blue-100 text-blue-800' : 
                                                    order.returnStatus === 'completed' ? 'bg-green-100 text-green-800' : 
                                                    'bg-red-100 text-red-800' %>">
                                                <%= order.returnStatus.toUpperCase() %>
                                            </span>
                                        </td>
                                        <td class="px-4 py-4">
                                            <% if (order.returnStatus === 'requested') { %>
                                                <button onclick="updateReturnStatus('<%= order._id %>', 'approve')" 
                                                    class="bg-green-500 text-white px-3 py-1 rounded text-xs mr-2 hover:bg-green-600">
                                                    <i class="fas fa-check mr-1"></i>Approve
                                                </button>
                                                <button onclick="updateReturnStatus('<%= order._id %>', 'reject')" 
                                                    class="bg-red-500 text-white px-3 py-1 rounded text-xs hover:bg-red-600">
                                                    <i class="fas fa-times mr-1"></i>Reject
                                                </button>
                                            <% } else if (order.returnStatus === 'approved') { %>
                                                <button onclick="updateReturnStatus('<%= order._id %>', 'complete')" 
                                                    class="bg-blue-500 text-white px-3 py-1 rounded text-xs hover:bg-blue-600">
                                                    <i class="fas fa-check-circle mr-1"></i>Complete
                                                </button>
                                            <% } else { %>
                                                <span class="text-gray-500 text-xs">No actions available</span>
                                            <% } %>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>

                        <!-- Admin Notes Section -->
                        <% if (order.adminReturnNotes) { %>
                            <div class="mt-4 p-3 bg-gray-50 rounded">
                                <h4 class="text-sm font-medium text-gray-700 mb-1">Admin Notes:</h4>
                                <p class="text-sm text-gray-600"><%= order.adminReturnNotes %></p>
                            </div>
                        <% } %>
                    </div>
                <% } %>

                <!-- Shipping Address -->
                <div class="bg-white rounded-lg shadow p-6">
                    <h2 class="text-xl font-semibold text-gray-800 mb-4">Shipping Address</h2>
                    <div class="text-gray-700">
                        <p class="font-medium"><%= order.shippingAddress.fullName %></p>
                        <p><%= order.shippingAddress.streetAddress %></p>
                        <p><%= order.shippingAddress.city %>, <%= order.shippingAddress.state %> <%= order.shippingAddress.pinCode %></p>
                        <p><%= order.shippingAddress.country %></p>
                        <p class="mt-2"><i class="fas fa-phone mr-2"></i><%= order.shippingAddress.phone %></p>
                    </div>
                </div>
            </div>

            <!-- Order Summary -->
            <div class="space-y-6">
                <!-- Status Card -->
                <div class="bg-white rounded-lg shadow p-6">
                    <h2 class="text-xl font-semibold text-gray-800 mb-4">Order Status</h2>
                    <div class="space-y-3">
                        <div class="flex justify-between">
                            <span class="text-gray-600">Order Status:</span>
                            <span class="px-2 py-1 text-xs font-semibold rounded-full 
                                <%= order.orderStatus === 'delivered' ? 'bg-green-100 text-green-800' : 
                                    order.orderStatus === 'shipped' ? 'bg-blue-100 text-blue-800' :
                                    order.orderStatus === 'processing' ? 'bg-yellow-100 text-yellow-800' :
                                    order.orderStatus === 'cancelled' ? 'bg-red-100 text-red-800' :
                                    'bg-gray-100 text-gray-800' %>">
                                <%= order.orderStatus %>
                            </span>
                        </div>
                        <div class="flex justify-between">
                            <span class="text-gray-600">Payment Status:</span>
                            <span class="px-2 py-1 text-xs font-semibold rounded-full 
                                <%= order.paymentStatus === 'paid' ? 'bg-green-100 text-green-800' : 
                                    order.paymentStatus === 'failed' ? 'bg-red-100 text-red-800' :
                                    'bg-yellow-100 text-yellow-800' %>">
                                <%= order.paymentStatus %>
                            </span>
                        </div>
                        <div class="flex justify-between">
                            <span class="text-gray-600">Payment Method:</span>
                            <span class="font-medium"><%= order.paymentMethod.toUpperCase() %></span>
                        </div>
                    </div>
                </div>

                <!-- Customer Info -->
                <div class="bg-white rounded-lg shadow p-6">
                    <h2 class="text-xl font-semibold text-gray-800 mb-4">Customer Information</h2>
                    <div class="space-y-2">
                        <p><strong>Name:</strong> <%= order.userId.fullName %></p>
                        <p><strong>Email:</strong> <%= order.userId.email %></p>
                       <p><strong>Customer Since:</strong> 
    <% if (order.userId && order.userId.createdOn) { %>
        <%= new Date(order.userId.createdOn).toLocaleDateString('en-GB', { 
            day: '2-digit', 
            month: 'short', 
            year: 'numeric' 
        }) %>
    <% } else { %>
        Not Available
    <% } %>
</p>
   </div>
                </div>

                <!-- Order Summary -->
                <div class="bg-white rounded-lg shadow p-6">
                    <h2 class="text-xl font-semibold text-gray-800 mb-4">Order Summary</h2>
                    <div class="space-y-2">
                        <% 
                            const activeItems = order.items.filter(item => item.status === 'active');
                            const cancelledItems = order.items.filter(item => item.status === 'cancelled');
                        %>
                        <div class="flex justify-between">
                            <span>Subtotal (<%= activeItems.length %> active items):</span>
                            <span title="₹<%= getFullNumber(order.subtotal) %>"><%= formatCurrency(order.subtotal) %></span>
                        </div>
                        <% if (cancelledItems.length > 0) { %>
                            <div class="flex justify-between text-red-600 text-sm">
                                <span>Cancelled items (<%= cancelledItems.length %>):</span>
                                <span title="-₹<%= getFullNumber(cancelledItems.reduce((sum, item) => sum + item.totalPrice, 0)) %>">
                                    -<%= formatCurrency(cancelledItems.reduce((sum, item) => sum + item.totalPrice, 0)) %>
                                </span>
                            </div>
                        <% } %>
                        <div class="flex justify-between">
                            <span>Shipping:</span>
                            <span title="₹<%= getFullNumber(order.shippingCost) %>"><%= formatCurrency(order.shippingCost) %></span>
                        </div>
                        <div class="flex justify-between">
                            <span>Tax:</span>
                            <span title="₹<%= getFullNumber(order.tax) %>"><%= formatCurrency(order.tax) %></span>
                        </div>
                        <div class="border-t pt-2 flex justify-between font-semibold text-lg">
                            <span>Total:</span>
                            <span title="₹<%= getFullNumber(order.totalAmount) %>"><%= formatCurrency(order.totalAmount) %></span>
                        </div>
                    </div>
                    
                    <!-- Invoice Download Button -->
                    <% if (order.orderStatus === 'confirmed' || order.orderStatus === 'processing' || order.orderStatus === 'shipped' || order.orderStatus === 'delivered') { %>
                        <div class="mt-4 pt-4 border-t">
                            <a href="/admin/orders/<%= order._id %>/invoice" target="_blank" 
                               class="w-full bg-green-600 text-white py-2 px-4 rounded-lg hover:bg-green-700 transition flex items-center justify-center">
                                <i class="fas fa-file-pdf mr-2"></i>Download Invoice PDF
                            </a>
                        </div>
                    <% } %>
                </div>

                <!-- Order Timeline -->
                <div class="bg-white rounded-lg shadow p-6">
                    <h2 class="text-xl font-semibold text-gray-800 mb-4">Order Timeline</h2>
                    <div class="space-y-3">
                        <div class="flex items-center gap-3">
                            <div class="w-3 h-3 bg-blue-500 rounded-full"></div>
                            <div>
                                <p class="font-medium">Order Placed</p>
                                <p class="text-sm text-gray-500"><%= new Date(order.createdAt).toLocaleString() %></p>
                            </div>
                        </div>
                        <% if (order.updatedAt > order.createdAt) { %>
                            <div class="flex items-center gap-3">
                                <div class="w-3 h-3 bg-green-500 rounded-full"></div>
                                <div>
                                    <p class="font-medium">Last Updated</p>
                                    <p class="text-sm text-gray-500"><%= new Date(order.updatedAt).toLocaleString() %></p>
                                </div>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        async function updateOrderStatus(orderId, currentStatus, currentPaymentStatus) {
            // Define status hierarchy
            const statusHierarchy = {
                'pending': 1,
                'confirmed': 2,
                'processing': 3,
                'shipped': 4,
                'delivered': 5,
                'returned': 6
            };
            
            const currentLevel = statusHierarchy[currentStatus] || 0;
            
            // Build status options with disabled attribute for backward statuses
            const statusOptions = [
                { value: 'pending', label: 'Pending', level: 1 },
                { value: 'confirmed', label: 'Confirmed', level: 2 },
                { value: 'processing', label: 'Processing', level: 3 },
                { value: 'shipped', label: 'Shipped', level: 4 },
                { value: 'delivered', label: 'Delivered', level: 5 }
            ];
            
            const statusOptionsHtml = statusOptions.map(option => {
                const isDisabled = option.level < currentLevel;
                const isSelected = option.value === currentStatus;
                return `<option value="${option.value}" ${isDisabled ? 'disabled' : ''} ${isSelected ? 'selected' : ''}>${option.label}${isDisabled ? ' (Cannot go backward)' : ''}</option>`;
            }).join('');
            
            // Check if payment is already paid
            const isPaid = currentPaymentStatus === 'paid';
            
            const { value: formValues } = await Swal.fire({
                title: 'Update Order Status',
                html: `
                    <div class="text-left">
                        <div class="mb-4">
                            <label class="block text-sm font-medium text-gray-700 mb-2">Order Status</label>
                            <select id="orderStatus" class="w-full px-3 py-2 border border-gray-300 rounded-md">
                                ${statusOptionsHtml}
                            </select>
                            <p class="text-xs text-gray-500 mt-1">Note: Orders can only progress forward</p>
                        </div>
                        <div class="mb-4">
                            <label class="block text-sm font-medium text-gray-700 mb-2">Payment Status</label>
                            ${isPaid 
                                ? `<select id="paymentStatus" class="w-full px-3 py-2 border border-gray-300 rounded-md bg-gray-100 cursor-not-allowed" disabled>
                                    <option value="paid" selected>Paid (Locked)</option>
                                   </select>
                                   <p class="text-xs text-gray-500 mt-1">
                                       <i class="fas fa-lock mr-1"></i>Payment status cannot be changed once paid
                                   </p>`
                                : `<% if ((order.paymentMethod === 'online' || order.paymentMethod === 'wallet') && order.paymentStatus === 'paid') { %>
                                    <select id="paymentStatus" class="w-full px-3 py-2 border border-gray-300 rounded-md bg-gray-100 cursor-not-allowed" disabled>
                                        <option value="paid" selected>Paid (Locked for online/wallet payments)</option>
                                    </select>
                                    <p class="text-xs text-gray-500 mt-1">
                                        <i class="fas fa-lock mr-1"></i>Payment status cannot be changed for online/wallet payments
                                    </p>
                                   <% } else { %>
                                    <select id="paymentStatus" class="w-full px-3 py-2 border border-gray-300 rounded-md">
                                        <option value="pending" <%= order.paymentStatus === 'pending' ? 'selected' : '' %>>Pending</option>
                                        <option value="paid" <%= order.paymentStatus === 'paid' ? 'selected' : '' %>>Paid</option>
                                        <option value="failed" <%= order.paymentStatus === 'failed' ? 'selected' : '' %>>Failed</option>
                                    </select>
                                   <% } %>`
                            }
                        </div>
                        <div class="mb-4">
                            <label class="block text-sm font-medium text-gray-700 mb-2">Admin Notes</label>
                            <textarea id="adminNotes" rows="3" class="w-full px-3 py-2 border border-gray-300 rounded-md" placeholder="Add any notes..."></textarea>
                        </div>
                    </div>
                `,
                focusConfirm: false,
                preConfirm: () => {
                    const paymentStatusField = document.getElementById('paymentStatus');
                    const result = {
                        orderStatus: document.getElementById('orderStatus').value,
                        notes: document.getElementById('adminNotes').value
                    };
                    
                    // Only include paymentStatus if the field is not disabled
                    if (!paymentStatusField.disabled) {
                        result.paymentStatus = paymentStatusField.value;
                    }
                    
                    return result;
                }
            });

            if (formValues) {
                try {
                    const response = await fetch(`/admin/orders/${orderId}/update`, {
                        method: 'PATCH',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify(formValues)
                    });

                    const result = await response.json();

                    if (result.success) {
                        Swal.fire('Success!', 'Order updated successfully', 'success');
                        location.reload();
                    } else {
                        Swal.fire('Error!', result.message, 'error');
                    }
                } catch (error) {
                    Swal.fire('Error!', 'Failed to update order', 'error');
                }
            }
        }

        async function updateReturnStatus(orderId, action) {
            let title, inputLabel, confirmText;
            
            if (action === 'approve') {
                title = 'Approve Return Request';
                inputLabel = 'Approval notes (optional):';
                confirmText = 'Approve Return';
            } else if (action === 'reject') {
                title = 'Reject Return Request';
                inputLabel = 'Rejection reason:';
                confirmText = 'Reject Return';
            } else if (action === 'complete') {
                title = 'Complete Return';
                inputLabel = 'Completion notes:';
                confirmText = 'Complete Return & Process Refund';
            }

            const { value: notes } = await Swal.fire({
                title: title,
                input: 'textarea',
                inputLabel: inputLabel,
                inputPlaceholder: 'Enter notes...',
                showCancelButton: true,
                confirmButtonText: confirmText,
                cancelButtonText: 'Cancel',
                confirmButtonColor: action === 'reject' ? '#ef4444' : '#3b82f6'
            });

            if (notes !== undefined) {
                try {
                    const response = await fetch('/admin/returns/update', {
                        method: 'PATCH',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({
                            orderId: orderId,
                            action: action,
                            adminNotes: notes
                        })
                    });

                    const result = await response.json();

                    if (result.success) {
                        Swal.fire('Success!', result.message, 'success').then(() => {
                            location.reload();
                        });
                    } else {
                        Swal.fire('Error', result.message, 'error');
                    }
                } catch (error) {
                    console.error('Error:', error);
                    Swal.fire('Error', 'Failed to update return status', 'error');
                }
            }
        }
    </script>
</body>
</html>
