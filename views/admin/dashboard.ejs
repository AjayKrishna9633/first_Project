<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>GEARGRID - Dashboard</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/public/css/text-wrap.css">
</head>
<body class="bg-gray-50">
    <!-- Header -->
    
            <%- include('../partials/adminHeader', { admin: admin }) %>


    <div class="flex">
        
        <!-- Sidebar -->
        <%- include('../partials/adminSidebar', { currentPage: 'Dashboard' }) %>

        <!-- Main Content -->
        <main class="flex-1 p-8">
            <!-- Breadcrumb -->
            <div class="flex items-center text-sm text-gray-600 mb-8">
                <span>Admin</span>
                <i class="fas fa-chevron-right mx-2 text-xs"></i>
                <span class="text-gray-900">Dashboard</span>
            </div>

            <!-- Stats Cards -->
            <div class="grid grid-cols-3 gap-6 mb-8">
                <!-- Total Sales Card -->
                <div class="bg-white rounded-lg shadow p-6">
                    <div class="flex justify-between items-start mb-4">
                        <div>
                            <p class="text-sm text-gray-600 mb-1">Total Sales</p>
                            <p class="text-xs text-gray-500">THIS MONTH</p>
                        </div>
                        <p class="text-3xl font-bold">$ 4,235</p>
                    </div>
                    <div class="flex items-end justify-between h-24">
                        <div class="w-1 bg-blue-500 h-12"></div>
                        <div class="w-1 bg-blue-500 h-16"></div>
                        <div class="w-1 bg-blue-500 h-10"></div>
                        <div class="w-1 bg-blue-500 h-20"></div>
                        <div class="w-1 bg-blue-500 h-8"></div>
                        <div class="w-1 bg-blue-500 h-14"></div>
                        <div class="w-1 bg-blue-500 h-18"></div>
                        <div class="w-1 bg-blue-500 h-12"></div>
                        <div class="w-1 bg-blue-500 h-16"></div>
                        <div class="w-1 bg-blue-500 h-10"></div>
                        <div class="w-1 bg-blue-500 h-22"></div>
                        <div class="w-1 bg-blue-500 h-14"></div>
                        <div class="w-1 bg-blue-500 h-8"></div>
                        <div class="w-1 bg-blue-500 h-16"></div>
                        <div class="w-1 bg-blue-500 h-12"></div>
                        <div class="w-1 bg-blue-500 h-18"></div>
                        <div class="w-1 bg-blue-500 h-10"></div>
                        <div class="w-1 bg-blue-500 h-14"></div>
                        <div class="w-1 bg-blue-500 h-20"></div>
                        <div class="w-1 bg-blue-500 h-12"></div>
                    </div>
                </div>

                <!-- Customers Card -->
                <div class="bg-white rounded-lg shadow p-6">
                    <div class="flex justify-between items-start mb-4">
                        <div>
                            <p class="text-sm text-gray-600 mb-1">Customers</p>
                            <p class="text-xs text-gray-500">THIS MONTH</p>
                        </div>
                        <p class="text-3xl font-bold">2,571</p>
                    </div>
                    <svg class="w-full h-24" viewBox="0 0 200 80">
                        <polyline 
                            fill="none" 
                            stroke="#6366f1" 
                            stroke-width="2"
                            points="0,40 20,35 40,45 60,30 80,40 100,35 120,45 140,25 160,35 180,30 200,40"
                        />
                    </svg>
                </div>

                <!-- Orders Card -->
                <div class="bg-white rounded-lg shadow p-6">
                    <div class="flex justify-between items-start mb-4">
                        <div>
                            <p class="text-sm text-gray-600 mb-1">Orders</p>
                            <p class="text-xs text-gray-500">MONTHLY GOALS: 1,000</p>
                        </div>
                        <p class="text-3xl font-bold">734</p>
                    </div>
                    <div class="mt-8">
                        <p class="text-xs text-gray-600 mb-2">266 Left</p>
                        <div class="w-full bg-gray-200 rounded-full h-2">
                            <div class="bg-blue-600 h-2 rounded-full" style="width: 73.4%"></div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="grid grid-cols-3 gap-6">
                <!-- Recent Orders -->
                <div class="col-span-2 bg-white rounded-lg shadow p-6">
                    <div class="flex justify-between items-center mb-6">
                        <h2 class="text-lg font-semibold">Recent Orders</h2>
                        <a href="#" class="text-sm text-blue-600 hover:underline">View All</a>
                    </div>
                    <table class="w-full">
                        <thead>
                            <tr class="border-b border-gray-200">
                                <th class="text-left py-3 text-sm font-medium text-gray-600">Item</th>
                                <th class="text-left py-3 text-sm font-medium text-gray-600">Date</th>
                                <th class="text-left py-3 text-sm font-medium text-gray-600">Total</th>
                                <th class="text-left py-3 text-sm font-medium text-gray-600">Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr class="border-b border-gray-100">
                                <td class="py-4 text-sm">ASTRO A50 (Gen 5)</td>
                                <td class="py-4 text-sm text-gray-600">20 Mar, 2023</td>
                                <td class="py-4 text-sm">$175.00</td>
                                <td class="py-4 text-sm text-gray-600">Processing</td>
                            </tr>
                            <tr class="border-b border-gray-100">
                                <td class="py-4 text-sm">Keyboard X550</td>
                                <td class="py-4 text-sm text-gray-600">19 Mar, 2023</td>
                                <td class="py-4 text-sm">$220.00</td>
                                <td class="py-4 text-sm text-gray-600">Processing</td>
                            </tr>
                            <tr class="border-b border-gray-100">
                                <td class="py-4 text-sm">G550 X PLUS</td>
                                <td class="py-4 text-sm text-gray-600">7 Feb, 2023</td>
                                <td class="py-4 text-sm">$257.00</td>
                                <td class="py-4 text-sm text-gray-600">Completed</td>
                            </tr>
                            <tr class="border-b border-gray-100">
                                <td class="py-4 text-sm">ASTRO A50 (Gen 6)</td>
                                <td class="py-4 text-sm text-gray-600">29 Jan, 2023</td>
                                <td class="py-4 text-sm">$200.00</td>
                                <td class="py-4 text-sm text-gray-600">Completed</td>
                            </tr>
                            <tr>
                                <td class="py-4 text-sm">Mouse mat X+</td>
                                <td class="py-4 text-sm text-gray-600">27 Jan, 2023</td>
                                <td class="py-4 text-sm">$35.00</td>
                                <td class="py-4 text-sm text-gray-600">Completed</td>
                            </tr>
                        </tbody>
                    </table>
                </div>

                <!-- Best Selling -->
                <div class="bg-white rounded-lg shadow p-6">
                    <div class="mb-6">
                        <h2 class="text-lg font-semibold">Best Selling</h2>
                        <p class="text-xs text-gray-500">THIS MONTH</p>
                    </div>
                    
                    <div class="mb-8">
                        <div class="flex justify-between items-baseline mb-6">
                            <p class="text-3xl font-bold">$2,400</p>
                            <p class="text-sm text-gray-600">— Total Sales</p>
                        </div>
                        
                        <div class="space-y-3 text-sm">
                            <div class="flex justify-between">
                                <span class="text-gray-600">Keyboards —</span>
                                <span class="font-medium">$940 Sales</span>
                            </div>
                            <div class="flex justify-between">
                                <span class="text-gray-600">Mouse —</span>
                                <span class="font-medium">$790 Sales</span>
                            </div>
                            <div class="flex justify-between">
                                <span class="text-gray-600">Mouse Mat —</span>
                                <span class="font-medium">$740 Sales</span>
                            </div>
                        </div>
                    </div>

                    <!-- Donut Chart -->
                    <div class="flex justify-center">
                        <svg width="120" height="120" viewBox="0 0 120 120">
                            <circle cx="60" cy="60" r="50" fill="none" stroke="#e5e7eb" stroke-width="20"/>
                            <circle cx="60" cy="60" r="50" fill="none" stroke="#6366f1" stroke-width="20"
                                stroke-dasharray="235 314" stroke-dashoffset="0" transform="rotate(-90 60 60)"/>
                            <circle cx="60" cy="60" r="50" fill="none" stroke="#93c5fd" stroke-width="20"
                                stroke-dasharray="196 314" stroke-dashoffset="-235" transform="rotate(-90 60 60)"/>
                        </svg>
                    </div>
                </div>
            </div>
        </main>
    </div>
</body>
</html>
