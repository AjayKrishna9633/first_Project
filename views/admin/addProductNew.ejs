<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Product - GEARGRID Admin</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/croppie/2.6.5/croppie.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/croppie/2.6.5/croppie.min.js"></script>
</head>
<body class="bg-gray-50">
    <div class="flex h-screen overflow-hidden">
        <%- include('../partials/adminSidebar', { currentPage: 'products' }) %>

        <div class="flex-1 flex flex-col overflow-hidden">
            <%- include('../partials/adminHeader', { admin: admin }) %>

            <main class="flex-1 overflow-y-auto p-6">
                <div class="mb-6">
                    <div class="flex items-center text-sm text-gray-600 mb-4">
                        <a href="/admin/products" class="hover:text-gray-900">Products</a>
                        <svg class="w-4 h-4 mx-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                        </svg>
                        <span class="text-gray-900 font-medium">Add New Product</span>
                    </div>
                    <h2 class="text-2xl font-bold text-gray-900">Add New Product</h2>
                    <p class="text-sm text-gray-600 mt-1">Create a new product with variants</p>
                </div>

                <% if (message) { %>
                    <div class="mb-6 px-4 py-3 rounded-lg border flex items-center gap-3 <%= isError ? 'bg-red-50 border-red-200 text-red-800' : 'bg-green-50 border-green-200 text-green-800' %>">
                        <span><%= message %></span>
                    </div>
                <% } %>

                <form id="productForm" action="/admin/products/add" method="POST" enctype="multipart/form-data">
                    
                    <!-- Basic Information -->
                    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 mb-6">
                        <h3 class="text-lg font-semibold text-gray-900 mb-4">Basic Information</h3>
                        
                        <div class="grid grid-cols-2 gap-5">
                            <div class="col-span-2">
                                <label class="block text-sm font-semibold text-gray-700 mb-2">Product Name *</label>
                                <input type="text" name="productName" required
                                    class="w-full px-4 py-2.5 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-gray-900"
                                    placeholder="e.g., Gaming Keyboard RGB">
                            </div>

                            <div class="col-span-2">
                                <label class="block text-sm font-semibold text-gray-700 mb-2">Description *</label>
                                <textarea name="description" required rows="4"
                                    class="w-full px-4 py-2.5 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-gray-900 resize-none"
                                    placeholder="Describe your product..."></textarea>
                            </div>

                            <div>
                                <label class="block text-sm font-semibold text-gray-700 mb-2">Category *</label>
                                <select name="category" required
                                    class="w-full px-4 py-2.5 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-gray-900">
                                    <option value="">Select a category</option>
                                    <% categories.forEach(category => { %>
                                        <option value="<%= category._id %>"><%= category.name %></option>
                                    <% }); %>
                                </select>
                            </div>
                        </div>
                    </div>

                    <!-- Product Variants -->
                    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 mb-6">
                        <div class="flex justify-between items-center mb-4">
                            <h3 class="text-lg font-semibold text-gray-900">Product Variants</h3>
                            <button type="button" onclick="addVariant()" 
                                class="px-4 py-2 bg-gray-900 text-white rounded-lg hover:bg-gray-800 text-sm flex items-center gap-2">
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
                                </svg>
                                Add Variant
                            </button>
                        </div>

                        <div id="variantsContainer">
                            <!-- Variants will be added here -->
                        </div>
                    </div>

                    <!-- Submit Buttons -->
                    <div class="flex gap-3">
                        <button type="submit"
                            class="flex-1 px-6 py-3 bg-gray-900 text-white rounded-lg hover:bg-gray-800 font-medium">
                            Add Product
                        </button>
                        <a href="/admin/products"
                            class="px-6 py-3 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200 font-medium">
                            Cancel
                        </a>
                    </div>
                </form>
            </main>
        </div>
    </div>

    <!-- Image Crop Modal -->
    <div id="cropModal" class="hidden fixed inset-0 bg-black bg-opacity-50 z-50 flex items-center justify-center">
        <div class="bg-white rounded-lg p-6 max-w-lg w-full">
            <h3 class="text-lg font-semibold mb-4">Crop Image</h3>
            <div id="cropContainer"></div>
            <div class="flex gap-3 mt-4">
                <button onclick="cropImage()" class="flex-1 px-4 py-2 bg-gray-900 text-white rounded-lg">Crop & Save</button>
                <button onclick="closeCropModal()" class="px-4 py-2 bg-gray-200 text-gray-700 rounded-lg">Cancel</button>
            </div>
        </div>
    </div>

    <script>
        let variantCount = 0;
        let currentCroppie = null;
        let currentVariantIndex = null;
        let currentImageIndex = null;

        // Add first variant on load
        window.onload = function() {
            addVariant();
        };

        function addVariant() {
            variantCount++;
            const container = document.getElementById('variantsContainer');
            const variantHtml = `
                <div class="variant-item border border-gray-200 rounded-lg p-4 mb-4" data-variant="${variantCount}">
                    <div class="flex justify-between items-center mb-4">
                        <h4 class="font-semibold text-gray-900">Variant #${variantCount}</h4>
                        <button type="button" onclick="removeVariant(${variantCount})" 
                            class="text-red-600 hover:text-red-800 text-sm">Remove</button>
                    </div>

                    <div class="grid grid-cols-2 gap-4 mb-4">
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-2">Color *</label>
                            <input type="text" name="variants[${variantCount}][color]" required
                                class="w-full px-4 py-2 border border-gray-300 rounded-lg">
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-2">Size</label>
                            <input type="text" name="variants[${variantCount}][size]"
                                class="w-full px-4 py-2 border border-gray-300 rounded-lg">
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-2">Regular Price *</label>
                            <input type="number" name="variants[${variantCount}][regularPrice]" required min="0" step="0.01"
                                class="w-full px-4 py-2 border border-gray-300 rounded-lg">
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-2">Sale Price *</label>
                            <input type="number" name="variants[${variantCount}][salePrice]" required min="0" step="0.01"
                                class="w-full px-4 py-2 border border-gray-300 rounded-lg">
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-2">Quantity *</label>
                            <input type="number" name="variants[${variantCount}][quantity]" required min="0"
                                class="w-full px-4 py-2 border border-gray-300 rounded-lg">
                        </div>
                    </div>

                    <!-- Image Upload -->
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Images (Max 5)</label>
                        <input type="file" accept="image/*" multiple onchange="handleImageSelect(event, ${variantCount})" 
                            class="hidden" id="imageInput${variantCount}">
                        <button type="button" onclick="document.getElementById('imageInput${variantCount}').click()"
                            class="px-4 py-2 border-2 border-dashed border-gray-300 rounded-lg hover:border-gray-400 w-full text-sm text-gray-600">
                            Click to upload images
                        </button>
                        <div id="imagePreview${variantCount}" class="grid grid-cols-5 gap-2 mt-3"></div>
                    </div>
                </div>
            `;
            container.insertAdjacentHTML('beforeend', variantHtml);
        }

        function removeVariant(index) {
            const variant = document.querySelector(`[data-variant="${index}"]`);
            if (variant) variant.remove();
        }

        function handleImageSelect(event, variantIndex) {
            const files = event.target.files;
            if (files.length > 5) {
                alert('Maximum 5 images allowed per variant');
                return;
            }

            Array.from(files).forEach((file, index) => {
                const reader = new FileReader();
                reader.onload = function(e) {
                    showCropModal(e.target.result, variantIndex, index);
                };
                reader.readAsDataURL(file);
            });
        }

        function showCropModal(imageData, variantIndex, imageIndex) {
            currentVariantIndex = variantIndex;
            currentImageIndex = imageIndex;
            
            const modal = document.getElementById('cropModal');
            const container = document.getElementById('cropContainer');
            modal.classList.remove('hidden');
            
            container.innerHTML = '';
            const img = document.createElement('div');
            img.style.width = '100%';
            img.style.height = '400px';
            container.appendChild(img);

            currentCroppie = new Croppie(img, {
                viewport: { width: 300, height: 300, type: 'square' },
                boundary: { width: 400, height: 400 },
                enableOrientation: true
            });

            currentCroppie.bind({ url: imageData });
        }

        function cropImage() {
            if (!currentCroppie) return;

            currentCroppie.result({
                type: 'base64',
                size: { width: 800, height: 800 },
                format: 'jpeg',
                quality: 0.9
            }).then(function(croppedImage) {
                addImagePreview(croppedImage, currentVariantIndex, currentImageIndex);
                closeCropModal();
            });
        }

        function closeCropModal() {
            document.getElementById('cropModal').classList.add('hidden');
            if (currentCroppie) {
                currentCroppie.destroy();
                currentCroppie = null;
            }
        }

        function addImagePreview(imageData, variantIndex, imageIndex) {
            const preview = document.getElementById(`imagePreview${variantIndex}`);
            const imgDiv = document.createElement('div');
            imgDiv.className = 'relative';
            imgDiv.innerHTML = `
                <img src="${imageData}" class="w-full h-20 object-cover rounded border">
                <button type="button" onclick="this.parentElement.remove()" 
                    class="absolute top-1 right-1 bg-red-500 text-white rounded-full w-5 h-5 text-xs">Ã—</button>
                <input type="hidden" name="variants[${variantIndex}][images][]" value="${imageData}">
            `;
            preview.appendChild(imgDiv);
        }
    </script>
</body>
</html>
