<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Product - GEARGRID Admin</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body class="bg-gray-50">
    <div class="flex h-screen overflow-hidden">
        <!-- Sidebar -->
        <%- include('../partials/adminSidebar', { currentPage: 'products' }) %>

        <!-- Main Content Area -->
        <div class="flex-1 flex flex-col overflow-hidden">
            <!-- Header -->
            <%- include('../partials/adminHeader', { admin: admin }) %>

            <!-- Main Content -->
            <main class="flex-1 overflow-y-auto p-6">
                <!-- Breadcrumb -->
                <div class="mb-6">
                    <div class="flex items-center text-sm text-gray-600 mb-4">
                        <a href="/admin/products" class="hover:text-gray-900">Products</a>
                        <svg class="w-4 h-4 mx-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                        </svg>
                        <span class="text-gray-900 font-medium">Add New Product</span>
                    </div>
                    <h2 class="text-2xl font-bold text-gray-900">Add New Product</h2>
                    <p class="text-sm text-gray-600 mt-1">Create a new product for your store</p>
                </div>

                <!-- Error/Success Message -->
                <% if (message) { %>
                    <div class="mb-6 px-4 py-3 rounded-lg border flex items-center gap-3 <%= isError ? 'bg-red-50 border-red-200 text-red-800' : 'bg-green-50 border-green-200 text-green-800' %>">
                        <svg class="w-5 h-5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                            <% if (isError) { %>
                                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
                            <% } else { %>
                                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                            <% } %>
                        </svg>
                        <span><%= message %></span>
                    </div>
                <% } %>

                <!-- Add Product Form -->
                <form action="/admin/products/add" method="POST" enctype="multipart/form-data" class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
                    
                    <!-- Product Name -->
                    <div class="mb-5">
                        <label class="block text-sm font-semibold text-gray-700 mb-2">Product Name *</label>
                        <input 
                            type="text" 
                            name="productName" 
                            required
                            class="w-full px-4 py-2.5 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-gray-900 focus:border-transparent transition"
                            placeholder="e.g., Gaming Keyboard RGB"
                        >
                    </div>

                    <!-- Description -->
                    <div class="mb-5">
                        <label class="block text-sm font-semibold text-gray-700 mb-2">Description *</label>
                        <textarea 
                            name="description" 
                            required
                            rows="4"
                            class="w-full px-4 py-2.5 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-gray-900 focus:border-transparent transition resize-none"
                            placeholder="Describe your product features, specifications, and benefits..."
                        ></textarea>
                    </div>

                    <!-- Category -->
                    <div class="mb-5">
                        <label class="block text-sm font-semibold text-gray-700 mb-2">Category *</label>
                        <select 
                            name="category" 
                            required
                            class="w-full px-4 py-2.5 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-gray-900 focus:border-transparent transition"
                        >
                            <option value="">Select a category</option>
                            <% categories.forEach(category => { %>
                                <option value="<%= category._id %>"><%= category.name %></option>
                            <% }); %>
                        </select>
                    </div>

                    <div class="grid grid-cols-2 gap-5 mb-5">
                        <!-- Color -->
                        <div>
                            <label class="block text-sm font-semibold text-gray-700 mb-2">Color *</label>
                            <input 
                                type="text" 
                                name="color" 
                                required
                                class="w-full px-4 py-2.5 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-gray-900 focus:border-transparent transition"
                                placeholder="e.g., Black, White, RGB"
                            >
                        </div>

                        <!-- Quantity -->
                        <div>
                            <label class="block text-sm font-semibold text-gray-700 mb-2">Stock Quantity *</label>
                            <input 
                                type="number" 
                                name="quantity" 
                                required
                                min="0"
                                class="w-full px-4 py-2.5 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-gray-900 focus:border-transparent transition"
                                placeholder="0"
                            >
                        </div>
                    </div>

                    <div class="grid grid-cols-2 gap-5 mb-5">
                        <!-- Regular Price -->
                        <div>
                            <label class="block text-sm font-semibold text-gray-700 mb-2">Regular Price (₹) *</label>
                            <input 
                                type="number" 
                                name="regularPrice" 
                                required
                                min="0"
                                step="0.01"
                                class="w-full px-4 py-2.5 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-gray-900 focus:border-transparent transition"
                                placeholder="0.00"
                            >
                        </div>

                        <!-- Sale Price -->
                        <div>
                            <label class="block text-sm font-semibold text-gray-700 mb-2">Sale Price (₹) *</label>
                            <input 
                                type="number" 
                                name="salePrice" 
                                required
                                min="0"
                                step="0.01"
                                class="w-full px-4 py-2.5 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-gray-900 focus:border-transparent transition"
                                placeholder="0.00"
                            >
                            <p class="text-xs text-gray-500 mt-1">Set lower than regular price for discount</p>
                        </div>
                    </div>

                    <!-- Product Images -->
                    <div class="mb-6">
                        <label class="block text-sm font-semibold text-gray-700 mb-2">Product Images * (Max 5)</label>
                        <div class="border-2 border-dashed border-gray-300 rounded-lg p-6 text-center hover:border-gray-400 transition">
                            <input 
                                type="file" 
                                name="productImages" 
                                multiple
                                accept="image/*"
                                required
                                id="productImages"
                                class="hidden"
                                onchange="updateFileLabel(this)"
                            >
                            <label for="productImages" class="cursor-pointer">
                                <svg class="w-12 h-12 mx-auto text-gray-400 mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"/>
                                </svg>
                                <p class="text-sm text-gray-600 mb-1">Click to upload or drag and drop</p>
                                <p class="text-xs text-gray-500">PNG, JPG, WEBP up to 5MB (Max 5 images)</p>
                            </label>
                            <div id="fileList" class="mt-3 text-sm text-gray-600"></div>
                        </div>
                    </div>

                    <!-- Buttons -->
                    <div class="flex gap-3 pt-4 border-t border-gray-200">
                        <button 
                            type="submit"
                            class="flex-1 px-6 py-3 bg-gray-900 text-white rounded-lg hover:bg-gray-800 transition font-medium flex items-center justify-center gap-2"
                        >
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
                            </svg>
                            <span>Add Product</span>
                        </button>
                        <a 
                            href="/admin/products"
                            class="px-6 py-3 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200 transition font-medium"
                        >
                            Cancel
                        </a>
                    </div>
                </form>
            </main>
        </div>
    </div>

    <script>
        function updateFileLabel(input) {
            const fileList = document.getElementById('fileList');
            if (input.files.length > 0) {
                const fileNames = Array.from(input.files).map(file => file.name).join(', ');
                fileList.textContent = `${input.files.length} file(s) selected: ${fileNames}`;
            } else {
                fileList.textContent = '';
            }
        }
    </script>
</body>
</html>
