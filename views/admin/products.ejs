<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Products - GEARGRID Admin</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>
<body class="bg-gray-50">
    <div class="flex h-screen overflow-hidden">
        <!-- Sidebar -->
        <%- include('../partials/adminSidebar', { currentPage: 'products' }) %>

        <!-- Main Content Area -->
        <div class="flex-1 flex flex-col overflow-hidden">
            <!-- Header -->
            <%- include('../partials/adminHeader', { admin: admin }) %>

            <!-- Main Content -->
            <main class="flex-1 overflow-y-auto p-6">
                <!-- Page Header -->
                <div class="mb-6">
                    <div class="flex justify-between items-center">
                        <div>
                            <h2 class="text-2xl font-bold text-gray-900">Products</h2>
                            <p class="text-sm text-gray-600 mt-1">Manage your product catalog</p>
                        </div>
                        <a 
                            href="/admin/product/add"
                            class="flex items-center gap-2 px-5 py-2.5 bg-gray-900 text-white rounded-lg hover:bg-gray-800 transition shadow-sm"
                        >
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
                            </svg>
                            <span>Add Product</span>
                        </a>
                    </div>
                </div>

                <!-- Search & Filter -->
                <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-4 mb-6">
                    <form method="GET" action="/admin/products" class="flex gap-3">
                        <div class="flex-1 relative">
                            <svg class="w-5 h-5 absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
                            </svg>
                            <input 
                                type="text" 
                                name="search" 
                                placeholder="Search products by name..." 
                                value="<%= search %>"
                                class="w-full pl-10 pr-4 py-2.5 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-gray-900 focus:border-transparent"
                            >
                        </div>
                        <button 
                            type="submit"
                            class="px-6 py-2.5 bg-gray-900 text-white rounded-lg hover:bg-gray-800 transition flex items-center gap-2"
                        >
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
                            </svg>
                            <span>Search</span>
                        </button>
                    </form>
                </div>

                <!-- Products Table -->
                <div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden">
                    <table class="w-full">
                        <thead class="bg-gray-50 border-b border-gray-200">
                            <tr>
                                <th class="px-6 py-4 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">Image</th>
                                <th class="px-6 py-4 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">Product Name</th>
                                <th class="px-6 py-4 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">Category</th>
                                <th class="px-6 py-4 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">Variants</th>
                                <th class="px-6 py-4 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">Price Range</th>
                                <th class="px-6 py-4 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">Stock</th>
                                <th class="px-6 py-4 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">Status</th>
                                <th class="px-6 py-4 text-center text-xs font-semibold text-gray-700 uppercase tracking-wider">Actions</th>
                            </tr>
                        </thead>
                        <tbody class="divide-y divide-gray-200 bg-white">
                            <% if (product.length === 0) { %>
                                <tr>
                                    <td colspan="8" class="px-6 py-12 text-center">
                                        <svg class="w-16 h-16 mx-auto text-gray-300 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"/>
                                        </svg>
                                        <p class="text-gray-500 text-sm">No products found</p>
                                        <a href="/admin/product/add" class="text-gray-900 hover:underline text-sm mt-2 inline-block">Add your first product</a>
                                    </td>
                                </tr>
                            <% } else { %>
                                <% product.forEach(prod => { 
                                    // Calculate price range from variants
                                    let minPrice = Infinity;
                                    let maxPrice = -Infinity;
                                    let variantColors = [];
                                    
                                    if (prod.variants && prod.variants.length > 0) {
                                        prod.variants.forEach(variant => {
                                            if (variant.salePrice < minPrice) minPrice = variant.salePrice;
                                            if (variant.salePrice > maxPrice) maxPrice = variant.salePrice;
                                            variantColors.push(variant.color);
                                        });
                                    }
                                %>
                                    <tr class="hover:bg-gray-50 transition">
                                        <td class="px-6 py-4">
                                            <% 
                                            // Show first variant image if available
                                            let imageUrl = null;
                                            if (prod.variants && prod.variants.length > 0 && prod.variants[0].images && prod.variants[0].images.length > 0) {
                                                imageUrl = prod.variants[0].images[0];
                                            } else if (prod.productImage && prod.productImage.length > 0) {
                                                imageUrl = prod.productImage[0];
                                            }
                                            %>
                                            <% if (imageUrl) { %>
                                                <img 
                                                    src="<%= imageUrl %>" 
                                                    alt="<%= prod.productName %>"
                                                    class="w-14 h-14 object-cover rounded-lg border border-gray-200"
                                                    onerror="this.src='/images/placeholder.png'"
                                                >
                                            <% } else { %>
                                                <div class="w-14 h-14 bg-gray-100 rounded-lg flex items-center justify-center border border-gray-200">
                                                    <svg class="w-6 h-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                                                    </svg>
                                                </div>
                                            <% } %>
                                        </td>
                                        <td class="px-6 py-4">
                                            <div class="text-sm font-medium text-gray-900"><%= prod.productName %></div>
                                            <div class="text-xs text-gray-500">
                                                <% if (prod.variants && prod.variants.length > 0) { %>
                                                    <%= prod.variants.length %> variant<%= prod.variants.length > 1 ? 's' : '' %> available
                                                <% } else { %>
                                                    No variants
                                                <% } %>
                                            </div>
                                        </td>
                                        <td class="px-6 py-4 text-sm text-gray-600">
                                            <%= prod.category ? prod.category.name : 'N/A' %>
                                        </td>
                                        <td class="px-6 py-4">
                                            <% if (prod.variants && prod.variants.length > 0) { %>
                                                <div class="flex flex-wrap gap-1">
                                                    <% prod.variants.slice(0, 3).forEach(variant => { %>
                                                        <span class="px-2 py-1 text-xs bg-gray-100 text-gray-700 rounded-full border border-gray-200">
                                                            <%= variant.color %>
                                                        </span>
                                                    <% }); %>
                                                    <% if (prod.variants.length > 3) { %>
                                                        <span class="px-2 py-1 text-xs bg-gray-200 text-gray-600 rounded-full">
                                                            +<%= prod.variants.length - 3 %>
                                                        </span>
                                                    <% } %>
                                                </div>
                                            <% } else { %>
                                                <span class="text-xs text-gray-400">No variants</span>
                                            <% } %>
                                        </td>
                                        <td class="px-6 py-4">
                                            <% if (prod.variants && prod.variants.length > 0) { %>
                                                <div class="text-sm font-medium text-gray-900">
                                                    <% if (minPrice === maxPrice) { %>
                                                        ₹<%= minPrice %>
                                                    <% } else { %>
                                                        ₹<%= minPrice %> - ₹<%= maxPrice %>
                                                    <% } %>
                                                </div>
                                            <% } else { %>
                                                <div class="text-sm font-medium text-gray-900">₹<%= prod.salePrice || prod.regularPrice || 'N/A' %></div>
                                            <% } %>
                                        </td>
                                        <td class="px-6 py-4 text-sm text-gray-600">
                                            <span class="<%= prod.quantity > 10 ? 'text-green-600' : prod.quantity > 0 ? 'text-yellow-600' : 'text-red-600' %>">
                                                <%= prod.quantity %> units
                                            </span>
                                        </td>
                                        <td class="px-6 py-4">
                                            <span class="px-2.5 py-1 text-xs font-medium rounded-full <%= prod.IsBlocked ? 'bg-red-100 text-red-700' : 'bg-green-100 text-green-700' %>">
                                                <%= prod.IsBlocked ? 'Blocked' : prod.status %>
                                            </span>
                                        </td>
                                        <td class="px-6 py-4">
                                            <div class="flex items-center justify-center gap-2">
                                                <a href="/admin/product/edit/<%= prod._id %>" class="p-2 text-blue-600 hover:bg-blue-50 rounded-lg transition" title="Edit">
                                                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                                                    </svg>
                                                </a>
                                                <button 
                                                    onclick="toggleBlock('<%= prod._id %>', <%= prod.IsBlocked ? 'true' : 'false' %>)"
                                                    class="p-2 <%= prod.IsBlocked ? 'text-green-600 hover:bg-green-50' : 'text-red-600 hover:bg-red-50' %> rounded-lg transition"
                                                    title="<%= prod.IsBlocked ? 'Unblock' : 'Block' %>"
                                                >
                                                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                        <% if (prod.IsBlocked) { %>
                                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 11V7a4 4 0 118 0m-4 8v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2z"/>
                                                        <% } else { %>
                                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
                                                        <% } %>
                                                    </svg>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                <% }); %>
                            <% } %>
                        </tbody>
                </table>
            </div>

                <!-- Pagination -->
                <% if (totalPages > 1) { %>
                    <div class="mt-6 flex justify-center items-center gap-2">
                        <% if (currentPage > 1) { %>
                            <a href="/admin/products?page=<%= currentPage - 1 %>&search=<%= search %>" class="px-3 py-2 rounded-lg border border-gray-300 text-gray-700 hover:bg-gray-50">
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
                                </svg>
                            </a>
                        <% } %>
                        
                        <% for (let i = 1; i <= totalPages; i++) { %>
                            <a 
                                href="/admin/products?page=<%= i %>&search=<%= search %>"
                                class="px-4 py-2 rounded-lg <%= i === currentPage ? 'bg-gray-900 text-white' : 'border border-gray-300 text-gray-700 hover:bg-gray-50' %>"
                            >
                                <%= i %>
                            </a>
                        <% } %>
                        
                        <% if (currentPage < totalPages) { %>
                            <a href="/admin/products?page=<%= currentPage + 1 %>&search=<%= search %>" class="px-3 py-2 rounded-lg border border-gray-300 text-gray-700 hover:bg-gray-50">
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                                </svg>
                            </a>
                        <% } %>
                    </div>
                <% } %>
            </main>
        </div>
    </div>

    <script>
        async function toggleBlock(productId, isCurrentlyBlocked) {
            const action = isCurrentlyBlocked ? 'unblock' : 'block';
            const confirmMsg = `Are you sure you want to ${action} this product?`;
            
            const result = await Swal.fire({
                title: 'Confirm Action',
                text: confirmMsg,
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#1f2937',
                cancelButtonColor: '#6b7280',
                confirmButtonText: `Yes, ${action}!`,
                cancelButtonText: 'Cancel'
            });

            if (!result.isConfirmed) return;

            try {
                const response = await fetch(`/admin/product/toggleBlock/${productId}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                });

                const data = await response.json();

                if (data.success) {
                    await Swal.fire({
                        title: 'Success!',
                        text: data.message,
                        icon: 'success',
                        confirmButtonColor: '#1f2937'
                    });
                    location.reload();
                } else {
                    await Swal.fire({
                        title: 'Error!',
                        text: data.message || 'Failed to update product status',
                        icon: 'error',
                        confirmButtonColor: '#1f2937'
                    });
                }
            } catch (error) {
                console.error('Error:', error);
                await Swal.fire({
                    title: 'Error!',
                    text: 'An error occurred. Please try again.',
                    icon: 'error',
                    confirmButtonColor: '#1f2937'
                });
            }
        }
    </script>
</body>
</html>
